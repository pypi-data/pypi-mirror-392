{
  "baseBranch": "main",
  "batchSize": 3,
  "filePatterns": ["**/*.tsx", "**/*.ts", "**/*.jsx", "**/*.js"],
  "excludePatterns": ["**/node_modules/**", "**/dist/**"],
  "translationPatterns": {
    "functions": ["t", "translate", "Translate"],
    "defaultParam": "_"
  },
  "safety": {
    "enabled": true,
    "checkSourceText": true,
    "checkTranslations": true,
    "customBlocklist": []
  },
  "preview": {
    "enabled": true,
    "batchApproval": true,
    "showContext": true,
    "contextLines": 3
  }
}

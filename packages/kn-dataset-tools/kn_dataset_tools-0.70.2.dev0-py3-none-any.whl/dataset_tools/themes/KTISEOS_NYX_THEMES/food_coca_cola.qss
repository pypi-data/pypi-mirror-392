/* COCA COLA THEME */
/* Classic Coca-Cola red and white, with black accents. */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF0000, stop: 0.5 #B22222,
                                stop: 1 #FF0000);
    color: #FFFFFF;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF0000, stop: 0.5 #B22222,
                                stop: 1 #FF0000);
    color: #FFFFFF;
    font-size: 13px;
}

QPushButton {
    background: #FFFFFF;
    border: 2px solid #000000;
    border-radius: 5px;
    padding: 8px 12px;
    color: #FF0000;
    font-weight: bold;
}

QPushButton:hover {
    background: #F0F0F0;
}

QTextEdit, QPlainTextEdit {
    background: #FFFFFF;
    border: 2px solid #FF0000;
    border-radius: 3px;
    padding: 5px;
    color: #000000;
    selection-background-color: #B22222;
    selection-color: #FFFFFF;
}

QListWidget {
    background: #FFFFFF;
    border: 2px solid #FF0000;
    border-radius: 3px;
    alternate-background-color: #F0F0F0;
    color: #000000;
}

QListWidget::item:selected {
    background: #B22222;
    color: #FFFFFF;
}

/* TERMINAL HACKER THEME */
/* Matrix-inspired green-on-black terminal aesthetic with scan lines */

QMainWindow {
    background-color: #000000;
    color: #00ff00;
    border: none;
}

QWidget {
    background-color: #000000;
    color: #00ff00;
    font-size: 12px;
    font-weight: bold;
}

/* Terminal-style buttons with glow effect */
QPushButton {
    background-color: #001100;
    border: 2px solid #00ff00;
    border-radius: 0px;
    padding: 8px 16px;
    color: #00ff00;
    font-weight: bold;
    text-transform: uppercase;
    min-height: 16px;
}

QPushButton:hover {
    background-color: #002200;
    border: 2px solid #00ff41;
    color: #00ff41;
}

QPushButton:pressed {
    background-color: #00ff00;
    border: 2px solid #00ff00;
    color: #000000;
}

QPushButton:disabled {
    background-color: #000000;
    border: 2px solid #004400;
    color: #004400;
}

/* Matrix-style text areas */
QTextEdit, QPlainTextEdit {
    background-color: #000000;
    border: 1px solid #00ff00;
    border-radius: 0px;
    padding: 8px;
    color: #00ff00;
    selection-background-color: #00ff00;
    selection-color: #000000;
    font-size: 12px;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #00ff41;
}

/* Terminal list styling */
QListWidget {
    background-color: #000000;
    border: 1px solid #00ff00;
    border-radius: 0px;
    alternate-background-color: #001100;
    color: #00ff00;
    gridline-color: #004400;
    outline: none;
}

QListWidget::item {
    padding: 6px;
    border-bottom: 1px dotted #004400;
}

QListWidget::item:selected {
    background-color: #00ff00;
    color: #000000;
}

QListWidget::item:hover {
    background-color: #002200;
    color: #00ff41;
}

QListWidget::item:selected:hover {
    background-color: #00ff41;
    color: #000000;
}

/* Hacker-style menu */
QMenuBar {
    background-color: #000000;
    color: #00ff00;
    border-bottom: 2px solid #00ff00;
    font-weight: bold;
    text-transform: uppercase;
}

QMenuBar::item {
    background: transparent;
    padding: 6px 12px;
}

QMenuBar::item:selected {
    background-color: #00ff00;
    color: #000000;
}

QMenu {
    background-color: #000000;
    border: 2px solid #00ff00;
    border-radius: 0px;
    padding: 4px;
}

QMenu::item {
    padding: 8px 20px;
    border-radius: 0px;
    text-transform: uppercase;
}

QMenu::item:selected {
    background-color: #00ff00;
    color: #000000;
}

/* Terminal scrollbars */
QScrollBar:vertical {
    background: #000000;
    width: 16px;
    border: 1px solid #00ff00;
    border-radius: 0px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: #00ff00;
    border-radius: 0px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: #00ff41;
}

QScrollBar::handle:vertical:pressed {
    background: #00cc00;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background: #000000;
    height: 16px;
    border: 1px solid #00ff00;
    border-radius: 0px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: #00ff00;
    border-radius: 0px;
    min-width: 30px;
}

QScrollBar::handle:horizontal:hover {
    background: #00ff41;
}

QScrollBar::handle:horizontal:pressed {
    background: #00cc00;
}

/* Terminal tabs */
QTabWidget::pane {
    border: 2px solid #00ff00;
    background-color: #000000;
}

QTabBar::tab {
    background-color: #001100;
    border: 1px solid #00ff00;
    padding: 8px 16px;
    margin-right: 2px;
    font-weight: bold;
    text-transform: uppercase;
}

QTabBar::tab:selected {
    background-color: #00ff00;
    color: #000000;
    border-bottom: none;
}

QTabBar::tab:hover:!selected {
    background-color: #002200;
    color: #00ff41;
}

/* Terminal status bar */
QStatusBar {
    background-color: #000000;
    border-top: 2px solid #00ff00;
    color: #00ff00;
    font-weight: bold;
}

/* Terminal input fields */
QLineEdit {
    background-color: #000000;
    border: 2px solid #00ff00;
    border-radius: 0px;
    padding: 6px;
    color: #00ff00;
    selection-background-color: #00ff00;
    selection-color: #000000;
}

QLineEdit:focus {
    border: 2px solid #00ff41;
}

/* Terminal combo boxes */
QComboBox {
    background-color: #001100;
    border: 2px solid #00ff00;
    border-radius: 0px;
    padding: 6px;
    color: #00ff00;
    font-weight: bold;
    min-width: 80px;
}

QComboBox:hover {
    background-color: #002200;
    color: #00ff41;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 2px solid #00ff00;
}

QComboBox::down-arrow {
    image: none;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 8px solid #00ff00;
}

QComboBox QAbstractItemView {
    background-color: #000000;
    border: 2px solid #00ff00;
    selection-background-color: #00ff00;
    selection-color: #000000;
    color: #00ff00;
}

/* Terminal splitter */
QSplitter::handle {
    background-color: #00ff00;
}

QSplitter::handle:horizontal {
    width: 3px;
}

QSplitter::handle:vertical {
    height: 3px;
}

/* Terminal progress bars */
QProgressBar {
    border: 2px solid #00ff00;
    border-radius: 0px;
    background-color: #000000;
    text-align: center;
    color: #00ff00;
    font-weight: bold;
}

QProgressBar::chunk {
    background-color: #00ff00;
    border-radius: 0px;
}

/* Terminal tool tips */
QToolTip {
    background-color: #000000;
    border: 2px solid #00ff00;
    color: #00ff00;
    padding: 6px;
    border-radius: 0px;
    font-weight: bold;
}

/* Additional terminal styling */
QLabel {
    color: #00ff00;
    font-weight: bold;
}

QGroupBox {
    border: 2px solid #00ff00;
    border-radius: 0px;
    margin-top: 10px;
    padding-top: 10px;
    font-weight: bold;
    text-transform: uppercase;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 8px 0 8px;
    background-color: #000000;
    color: #00ff00;
}
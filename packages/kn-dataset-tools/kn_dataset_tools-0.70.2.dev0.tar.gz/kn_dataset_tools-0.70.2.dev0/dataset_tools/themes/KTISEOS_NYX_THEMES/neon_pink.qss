/* NEON PINK THEME */
/* Dark background with neon pink accents - Visual Kei inspired */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1C1C1C, stop: 1 #000000);
    color: #FFFFFF;
}

QWidget {
    background: transparent;
    color: #FFFFFF;
    font-size: 13px;
}

/* Neon pink buttons */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF1493, stop: 1 #C71585);
    border: 2px solid #FF69B4;
    border-radius: 8px;
    color: #FFFFFF;
    font-weight: bold;
    padding: 8px 16px;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF69B4, stop: 1 #FF1493);
    border: 2px solid #FF00FF;
    color: #000000;
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #8B0000, stop: 1 #FF1493);
    border: 2px solid #FFFFFF;
}

QPushButton:disabled {
    background: #3A3A3A;
    border: 2px solid #2C2C2C;
    color: #707070;
}

QFrame {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #2F2F2F, stop: 1 #000000);
    border: 2px solid #FF1493;
    border-radius: 10px;
}

/* Text areas with neon glow effect */
QTextEdit, QPlainTextEdit {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #000000, stop: 1 #1C1C1C);
    border: 2px solid #FF1493;
    border-radius: 8px;
    color: #FFDDEE;
    selection-background-color: #FF69B4;
    selection-color: #000000;
    padding: 8px;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #FF00FF;
}

/* List widgets */
QListWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1C1C1C, stop: 1 #000000);
    border: 2px solid #FF1493;
    border-radius: 8px;
    color: #FFFFFF;
    font-weight: bold;
    alternate-background-color: #2F2F2F;
}

QListWidget::item {
    padding: 6px;
    border-bottom: 1px solid #444444;
}

QListWidget::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #FF1493, stop: 1 #8B0000);
    color: #FFFFFF;
    border: 1px solid #FF69B4;
    border-radius: 4px;
}

QListWidget::item:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #4B0082, stop: 1 #FF1493);
    color: #FFDDEE;
}

/* Menu bar */
QMenuBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #2F2F2F, stop: 1 #1C1C1C);
    border-bottom: 3px solid #FF1493;
    color: #FFFFFF;
    font-weight: bold;
}

QMenuBar::item {
    background: transparent;
    padding: 8px 16px;
}

QMenuBar::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF1493, stop: 1 #C71585);
    color: #FFFFFF;
    border-radius: 4px;
}

QMenu {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1C1C1C, stop: 1 #000000);
    border: 2px solid #FF1493;
    border-radius: 8px;
    color: #FFFFFF;
    font-weight: bold;
}

QMenu::item {
    padding: 6px 20px;
}

QMenu::item:selected {
    background: #FF1493;
    color: #FFFFFF;
    border-radius: 4px;
}

/* Status bar */
QStatusBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #FF1493, stop: 0.5 #1C1C1C, stop: 1 #FF1493);
    border-top: 2px solid #FF69B4;
    color: #FFFFFF;
    font-weight: bold;
}

/* Scrollbars */
QScrollBar:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #1C1C1C, stop: 1 #000000);
    width: 18px;
    border: 1px solid #FF1493;
    border-radius: 9px;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #FF1493, stop: 1 #C71585);
    border: 1px solid #FF69B4;
    border-radius: 8px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #FF69B4, stop: 1 #FF1493);
    border: 1px solid #FF00FF;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    background: #1C1C1C;
    border: 1px solid #FF1493;
    height: 18px;
    border-radius: 9px;
}

QScrollBar:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1C1C1C, stop: 1 #000000);
    height: 18px;
    border: 1px solid #FF1493;
    border-radius: 9px;
}

QScrollBar::handle:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF1493, stop: 1 #C71585);
    border: 1px solid #FF69B4;
    border-radius: 8px;
    min-width: 30px;
}

/* Labels */
QLabel {
    color: #FFFFFF;
    font-weight: bold;
    background-color: transparent;
}

/* Dialogs */
QDialog {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #2F2F2F, stop: 1 #1C1C1C);
    color: #FFFFFF;
    border: 2px solid #FF1493;
    border-radius: 10px;
}

QLineEdit {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #000000, stop: 1 #1C1C1C);
    border: 2px solid #FF1493;
    border-radius: 6px;
    color: #FFFFFF;
    padding: 8px;
    selection-background-color: #FF69B4;
    selection-color: #000000;
}

QLineEdit:focus {
    border: 2px solid #FF00FF;
}

QComboBox {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #3F3F3F, stop: 1 #2F2F2F);
    border: 2px solid #FF1493;
    border-radius: 6px;
    color: #FFFFFF;
    font-weight: bold;
    padding: 4px 8px;
    min-height: 20px;
}

QComboBox:hover {
    border: 2px solid #FF69B4;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4F4F4F, stop: 1 #3F3F3F);
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 4px solid #FF1493;
    width: 0;
    height: 0;
}

QComboBox QAbstractItemView {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1C1C1C, stop: 1 #000000);
    border: 2px solid #FF1493;
    selection-background-color: #FF1493;
    selection-color: #FFFFFF;
    color: #FFFFFF;
}

/* Tab Widget styling */
QTabWidget::pane {
    border: 2px solid #FF1493;
    border-radius: 8px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #2F2F2F, stop: 1 #1C1C1C);
}

QTabBar::tab {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #3F3F3F, stop: 1 #2F2F2F);
    border: 2px solid #FF1493;
    color: #FFFFFF;
    font-weight: bold;
    padding: 8px 16px;
    margin-right: 2px;
}

QTabBar::tab:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #FF1493, stop: 1 #C71585);
    color: #FFFFFF;
}

QTabBar::tab:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4F4F4F, stop: 1 #3F3F3F);
    border: 2px solid #FF69B4;
}

QProgressBar {
    border: 2px solid #FF1493;
    border-radius: 8px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #000000, stop: 1 #1C1C1C);
    text-align: center;
    color: #FFFFFF;
}

QProgressBar::chunk {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #FF1493, stop: 1 #C71585);
    border-radius: 6px;
}

QToolTip {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #2F2F2F, stop: 1 #1C1C1C);
    border: 2px solid #FF1493;
    color: #FFDDEE;
    padding: 8px;
    border-radius: 6px;
}

QGroupBox {
    border: 2px solid #FF1493;
    border-radius: 10px;
    margin-top: 10px;
    padding-top: 10px;
    color: #FFFFFF;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #2F2F2F, stop: 1 #1C1C1C);
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 8px;
    background: #FF1493;
    color: #FFFFFF;
    border-radius: 4px;
    font-weight: bold;
}

QCheckBox {
    color: #FFFFFF;
    font-weight: bold;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border-radius: 3px;
    border: 2px solid #FF1493;
    background: #1C1C1C;
}

QCheckBox::indicator:checked {
    background: #FF1493;
    border: 2px solid #FF69B4;
}

QCheckBox::indicator:hover {
    border: 2px solid #FF69B4;
}

QSlider::groove:horizontal {
    background: #2A2A2A;
    height: 6px;
    border-radius: 3px;
    border: 1px solid #FF1493;
}

QSlider::handle:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #FF1493, stop: 1 #C71585);
    width: 16px;
    height: 16px;
    margin: -5px 0;
    border-radius: 8px;
    border: 1px solid #FF69B4;
}

QSlider::handle:horizontal:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #FF69B4, stop: 1 #FF1493);
}

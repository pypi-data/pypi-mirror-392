/* FOURTH OF JULY INSPIRED THEME */
/* Patriotic red, white, and blue with stars and stripes aesthetic */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #002868, stop: 0.33 #ffffff,
                                stop: 0.66 #bf0a30, stop: 1 #002868);
    color: #ffffff;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #002868, stop: 0.33 #ffffff,
                                stop: 0.66 #bf0a30, stop: 1 #002868);
    color: #ffffff;
    font-size: 13px;
    font-weight: bold;
}

/* Star-spangled buttons */
QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #bf0a30, stop: 0.5 #dc143c,
                                stop: 1 #8b0000);
    border: 3px ridge #ffffff;
    border-radius: 8px;
    padding: 10px 16px;
    color: #ffffff;
    min-height: 16px;
    font-weight: bold;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ff4444, stop: 0.5 #bf0a30,
                                stop: 1 #dc143c);
    border: 3px ridge #ffd700;
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #8b0000, stop: 0.5 #654321,
                                stop: 1 #2f4f4f);
    border: 3px inset #ffffff;
}

QPushButton:disabled {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #696969, stop: 1 #2f4f4f);
    border: 3px ridge #808080;
    color: #c0c0c0;
}

/* Liberty text areas */
QTextEdit, QPlainTextEdit {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f8f8ff, stop: 1 #e6e6fa);
    border: 4px ridge #bf0a30;
    border-radius: 8px;
    padding: 12px;
    color: #002868;
    selection-background-color: #bf0a30;
    selection-color: #ffffff;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 4px ridge #002868;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #f0f8ff);
}

/* Constitutional lists */
QListWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f8f8ff, stop: 1 #e6e6fa);
    border: 4px ridge #bf0a30;
    border-radius: 8px;
    alternate-background-color: #ffffff;
    color: #002868;
    gridline-color: #bf0a30;
    outline: none;
}

QListWidget::item {
    padding: 10px 12px;
    border-bottom: 2px solid #bf0a30;
    border-radius: 4px;
    margin: 2px;
}

QListWidget::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #002868, stop: 1 #191970);
    color: #ffffff;
    border-radius: 6px;
    border: 2px solid #ffd700;
    font-weight: bold;
}

QListWidget::item:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #bf0a30, stop: 1 #8b0000);
    color: #ffffff;
    border-radius: 6px;
}

/* Federal menu styling */
QMenuBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #002868, stop: 1 #191970);
    color: #ffffff;
    border-bottom: 4px ridge #bf0a30;
    font-weight: bold;
}

QMenuBar::item {
    background: transparent;
    padding: 8px 14px;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #bf0a30, stop: 1 #8b0000);
    color: #ffffff;
    border: 2px ridge #ffffff;
}

QMenu {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f8f8ff, stop: 1 #e6e6fa);
    border: 4px ridge #002868;
    border-radius: 8px;
    padding: 6px;
}

QMenu::item {
    padding: 8px 20px;
    border-radius: 4px;
    margin: 2px;
    color: #002868;
}

QMenu::item:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #bf0a30, stop: 1 #8b0000);
    color: #ffffff;
}

/* Stars and stripes scrollbars */
QScrollBar:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #bf0a30, stop: 0.5 #ffffff,
                                stop: 1 #bf0a30);
    width: 16px;
    border: 3px ridge #002868;
    border-radius: 8px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #002868, stop: 0.5 #4169e1,
                                stop: 1 #191970);
    border: 3px ridge #ffffff;
    border-radius: 6px;
    min-height: 30px;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #4169e1, stop: 0.5 #6495ed,
                                stop: 1 #002868);
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #bf0a30, stop: 0.5 #ffffff,
                                stop: 1 #bf0a30);
    height: 16px;
    border: 3px ridge #002868;
    border-radius: 8px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #002868, stop: 0.5 #4169e1,
                                stop: 1 #191970);
    border: 3px ridge #ffffff;
    border-radius: 6px;
    min-width: 30px;
}

/* Independence tabs */
QTabWidget::pane {
    border: 4px ridge #bf0a30;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f8f8ff, stop: 1 #e6e6fa);
    border-radius: 8px;
}

QTabBar::tab {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #002868, stop: 1 #191970);
    border: 4px ridge #ffffff;
    padding: 10px 18px;
    margin-right: 3px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    font-weight: bold;
    color: #ffffff;
}

QTabBar::tab:selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #bf0a30, stop: 1 #8b0000);
    border: 4px ridge #ffd700;
    border-bottom: none;
    color: #ffffff;
}

QTabBar::tab:hover:!selected {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4169e1, stop: 1 #002868);
    border: 4px ridge #bf0a30;
    color: #ffffff;
}

/* Constitution status bar */
QStatusBar {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #bf0a30, stop: 1 #8b0000);
    border-top: 4px ridge #ffffff;
    color: #ffffff;
    font-weight: bold;
}

/* Liberty Bell input fields */
QLineEdit {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #f8f8ff);
    border: 4px ridge #002868;
    border-radius: 6px;
    padding: 8px;
    color: #002868;
    selection-background-color: #bf0a30;
    selection-color: #ffffff;
}

QLineEdit:focus {
    border: 4px ridge #bf0a30;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #fffafa);
}

/* Patriotic combo boxes */
QComboBox {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #002868, stop: 1 #191970);
    border: 4px ridge #ffffff;
    border-radius: 6px;
    padding: 8px;
    color: #ffffff;
    min-width: 80px;
    font-weight: bold;
}

QComboBox:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4169e1, stop: 1 #002868);
    border: 4px ridge #bf0a30;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 8px solid #ffffff;
}

QComboBox QAbstractItemView {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f8f8ff, stop: 1 #e6e6fa);
    border: 4px ridge #002868;
    border-radius: 6px;
    selection-background-color: #bf0a30;
    selection-color: #ffffff;
    color: #002868;
}

/* Freedom progress bars */
QProgressBar {
    border: 4px ridge #002868;
    border-radius: 6px;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f8f8ff, stop: 1 #e6e6fa);
    text-align: center;
    color: #002868;
    font-weight: bold;
}

QProgressBar::chunk {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #bf0a30, stop: 0.5 #ffffff,
                                stop: 1 #002868);
    border-radius: 4px;
    margin: 2px;
}

/* Eagle tooltips */
QToolTip {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #f8f8ff);
    border: 4px ridge #bf0a30;
    color: #002868;
    padding: 8px 12px;
    border-radius: 6px;
    font-weight: bold;
}

/* Additional patriotic styling */
QLabel {
    color: #ffffff;
    font-weight: bold;
}

QGroupBox {
    border: 4px ridge #bf0a30;
    border-radius: 10px;
    margin-top: 12px;
    padding-top: 12px;
    font-weight: bold;
    color: #ffffff;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #f8f8ff, stop: 1 #e6e6fa);
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 15px;
    padding: 0 12px 0 12px;
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 0,
                                stop: 0 #002868, stop: 1 #bf0a30);
    color: #ffffff;
    font-weight: bold;
    border-radius: 6px;
    border: 3px ridge #ffffff;
}

QCheckBox {
    color: #ffffff;
    font-weight: bold;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    border-radius: 3px;
    border: 2px ridge #002868;
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #ffffff, stop: 1 #f8f8ff);
}

QCheckBox::indicator:checked {
    background: qlineargradient(x1: 0, y1: 0, x2: 1, y2: 1,
                                stop: 0 #bf0a30, stop: 1 #002868);
    border: 2px ridge #ffffff;
}

QCheckBox::indicator:hover {
    border: 2px ridge #bf0a30;
}
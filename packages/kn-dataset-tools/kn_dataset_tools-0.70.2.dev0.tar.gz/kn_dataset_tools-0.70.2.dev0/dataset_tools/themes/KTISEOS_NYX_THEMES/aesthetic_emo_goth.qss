/* VISUAL KEI / MALICE MIZER THEME */
/* Inspired by Visual Kei and Malice Mizer aesthetics - Dark, elegant, and gothic with silver, black, and deep jewel tones */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1A1A1A, stop: 0.3 #2A2A2A,
                                stop: 0.7 #3A3A3A, stop: 1 #1A1A1A);
    color: #C0C0C0;
    border: none;
}

QWidget {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #1A1A1A, stop: 0.3 #2A2A2A,
                                stop: 0.7 #3A3A3A, stop: 1 #1A1A1A);
    color: #C0C0C0;
    font-size: 13px;
}

QPushButton {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #4A004A, stop: 1 #3A003A);
    border: 2px solid #C0C0C0;
    border-radius: 5px;
    padding: 8px 12px;
    color: #FFFFFF;
    font-weight: bold;
    text-transform: uppercase;
}

QPushButton:hover {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #5A005A, stop: 1 #4A004A);
    border: 2px solid #FFD700;
}

QPushButton:pressed {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #3A003A, stop: 1 #4A004A);
    border: 2px inset #C0C0C0;
}

QPushButton:disabled {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #696969, stop: 1 #2F4F4F);
    border: 2px solid #708090;
    color: #DCDCDC;
}

QTextEdit, QPlainTextEdit {
    background: #0A0A0A;
    border: 2px solid #4A004A;
    border-radius: 5px;
    padding: 8px;
    color: #C0C0C0;
    selection-background-color: #4A004A;
    selection-color: #FFFFFF;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #C0C0C0;
}

QListWidget {
    background: #0A0A0A;
    border: 2px solid #4A004A;
    border-radius: 5px;
    alternate-background-color: #1A1A1A;
    color: #C0C0C0;
    gridline-color: #2A2A2A;
    outline: none;
}

QListWidget::item {
    padding: 8px 10px;
    border-bottom: 1px solid #3A3A3A;
}

QListWidget::item:selected {
    background: #4A004A;
    color: #FFFFFF;
}

QListWidget::item:hover {
    background: #2A2A2A;
}

QMenuBar {
    background: #2A2A2A;
    color: #C0C0C0;
    border-bottom: 1px solid #4A004A;
}

QMenuBar::item {
    background: transparent;
    padding: 5px 10px;
}

QMenuBar::item:selected {
    background: #4A004A;
}

QMenu {
    background: #2A2A2A;
    border: 1px solid #4A004A;
    padding: 5px;
}

QMenu::item {
    padding: 5px 15px;
    color: #C0C0C0;
}

QMenu::item:selected {
    background: #4A004A;
}

QScrollBar:vertical {
    background: #2A2A2A;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background: #4A004A;
    border-radius: 5px;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background: #2A2A2A;
    height: 12px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background: #4A004A;
    border-radius: 5px;
}

QTabWidget::pane {
    border: 1px solid #4A004A;
    background: #0A0A0A;
}

QTabBar::tab {
    background: #2A2A2A;
    border: 1px solid #4A004A;
    padding: 8px 15px;
    color: #C0C0C0;
}

QTabBar::tab:selected {
    background: #0A0A0A;
    color: #C0C0C0;
}

QTabBar::tab:hover:!selected {
    background: #3A3A3A;
}

QStatusBar {
    background: #2A2A2A;
    border-top: 1px solid #4A004A;
    color: #C0C0C0;
}

QLineEdit {
    background: #0A0A0A;
    border: 2px solid #4A004A;
    border-radius: 5px;
    padding: 8px;
    color: #C0C0C0;
    selection-background-color: #4A004A;
    selection-color: #FFFFFF;
}

QLineEdit:focus {
    border: 2px solid #C0C0C0;
}

QComboBox {
    background: #2A2A2A;
    border: 2px solid #4A004A;
    border-radius: 5px;
    padding: 5px;
    color: #C0C0C0;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
    border-left: 1px solid #4A004A;
}

QComboBox::down-arrow {
    image: none;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 8px solid #C0C0C0;
}

QComboBox QAbstractItemView {
    background: #2A2A2A;
    border: 1px solid #4A004A;
    selection-background-color: #4A004A;
    color: #C0C0C0;
}

QSplitter::handle {
    background: #4A004A;
    border: 1px solid #C0C0C0;
}

QSplitter::handle:horizontal {
    width: 5px;
}

QSplitter::handle:vertical {
    height: 5px;
}

QProgressBar {
    border: 2px solid #4A004A;
    border-radius: 5px;
    background: #0A0A0A;
    text-align: center;
    color: #C0C0C0;
}

QProgressBar::chunk {
    background: #4A004A;
    border-radius: 3px;
}

QToolTip {
    background: #2A2A2A;
    border: 1px solid #4A004A;
    color: #C0C0C0;
    padding: 5px;
    border-radius: 3px;
}

QLabel {
    color: #C0C0C0;
}

QGroupBox {
    border: 2px solid #4A004A;
    border-radius: 8px;
    margin-top: 10px;
    padding-top: 10px;
    color: #C0C0C0;
    background: #0A0A0A;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 5px 0 5px;
    background: #4A004A;
    color: #FFFFFF;
    border-radius: 3px;
}

QCheckBox {
    color: #C0C0C0;
}

QCheckBox::indicator {
    width: 15px;
    height: 15px;
    border-radius: 3px;
    border: 1px solid #4A004A;
    background: #0A0A0A;
}

QCheckBox::indicator:checked {
    background: #4A004A;
}

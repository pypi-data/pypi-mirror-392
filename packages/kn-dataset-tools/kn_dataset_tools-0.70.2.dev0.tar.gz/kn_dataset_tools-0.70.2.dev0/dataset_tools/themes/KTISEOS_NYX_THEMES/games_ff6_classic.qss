/* FINAL FANTASY 6 CLASSIC THEME */
/* Authentic FF6 menu style - Deep royal blues and purples */

QMainWindow {
    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                stop: 0 #000020, stop: 0.5 #000080, stop: 1 #4040C0);
    color: #FFFFFF;
    border: none;
}

QWidget {
    background: transparent;
    color: #FFFFFF;
    font-size: 13px;
}

QFrame {
    background: #000040;
    border: 2px solid #4040A0;
}

QPushButton {
    background: #6060A0;
    border: 2px solid #8080C0;
    border-radius: 0px;
    color: #FFFFFF;
    font-weight: bold;
    padding: 8px 16px;
}

QPushButton:hover {
    background: #8080C0;
    color: #FFFF80;
}

QPushButton:pressed {
    background: #4040A0;
    border: 2px solid #C0C0FF;
}

QPushButton:disabled {
    background: #404080;
    border: 2px solid #606080;
    color: #808080;
}

QTextEdit, QPlainTextEdit {
    background: #000020;
    border: 2px solid #4040A0;
    border-radius: 0px;
    padding: 5px;
    color: #FFFFFF;
    selection-background-color: #8080FF;
    selection-color: #000000;
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid #C0C0FF;
}

QListWidget {
    background: #000020;
    border: 2px solid #4040A0;
    border-radius: 0px;
    alternate-background-color: #000040;
    color: #FFFFFF;
}

QListWidget::item {
    padding: 6px;
    border: none;
}

QListWidget::item:selected {
    background: #4040A0;
    color: #FFFFFF;
}

QListWidget::item:hover {
    background: #404080;
    color: #FFFF80;
}

QMenuBar {
    background: #6060A0;
    color: #FFFFFF;
    border-bottom: 2px solid #202060;
}

QMenuBar::item {
    background: transparent;
    padding: 6px 12px;
}

QMenuBar::item:selected {
    background: #8080FF;
    color: #FFFF80;
}

QMenu {
    background: #000040;
    border: 2px solid #4040A0;
    color: #FFFFFF;
}

QMenu::item {
    padding: 6px 20px;
}

QMenu::item:selected {
    background: #8080FF;
    color: #FFFF80;
}

QScrollBar:vertical {
    background: #202060;
    width: 16px;
    border: 2px solid #4040A0;
    border-radius: 0px;
}

QScrollBar::handle:vertical {
    background: #6060A0;
    border: 2px solid #C0C0FF;
    border-radius: 0px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: #8080C0;
}

QScrollBar:horizontal {
    background: #202060;
    height: 16px;
    border: 2px solid #4040A0;
    border-radius: 0px;
}

QScrollBar::handle:horizontal {
    background: #6060A0;
    border: 2px solid #C0C0FF;
    border-radius: 0px;
    min-width: 20px;
}

QScrollBar::add-line, QScrollBar::sub-line {
    border: none;
    background: none;
}

QTabWidget::pane {
    border: 2px solid #4040A0;
    background: #000040;
}

QTabBar::tab {
    background: #6060A0;
    border: 2px solid #4040A0;
    padding: 8px 15px;
    color: #FFFFFF;
    font-weight: bold;
}

QTabBar::tab:selected {
    background: #8080C0;
    color: #FFFF80;
}

QTabBar::tab:hover:!selected {
    background: #7070B0;
}

QStatusBar {
    background: #4040A0;
    border-top: 2px solid #8080C0;
    color: #FFFFFF;
    font-weight: bold;
}

QLineEdit {
    background: #000020;
    border: 2px solid #4040A0;
    border-radius: 0px;
    padding: 8px;
    color: #FFFFFF;
    selection-background-color: #8080FF;
    selection-color: #000000;
}

QLineEdit:focus {
    border: 2px solid #C0C0FF;
}

QComboBox {
    background: #6060A0;
    border: 2px solid #4040A0;
    border-radius: 0px;
    padding: 5px;
    color: #FFFFFF;
}

QComboBox:hover {
    background: #7070B0;
    border: 2px solid #C0C0FF;
}

QComboBox::down-arrow {
    image: none;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    border-top: 8px solid #FFFFFF;
}

QComboBox QAbstractItemView {
    background: #000040;
    border: 2px solid #4040A0;
    selection-background-color: #8080FF;
    selection-color: #FFFF80;
    color: #FFFFFF;
}

QProgressBar {
    border: 2px solid #4040A0;
    border-radius: 0px;
    background: #000020;
    text-align: center;
    color: #FFFFFF;
}

QProgressBar::chunk {
    background: #8080C0;
    border-radius: 0px;
}

QToolTip {
    background: #000040;
    border: 2px solid #8080C0;
    color: #FFFF80;
    padding: 5px;
    border-radius: 0px;
}

QLabel {
    background-color: transparent;
    color: #FFFFFF;
    font-weight: bold;
}

QGroupBox {
    border: 2px solid #4040A0;
    border-radius: 0px;
    margin-top: 10px;
    padding-top: 10px;
    color: #FFFFFF;
    background: #000040;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 5px;
    background: #6060A0;
    color: #FFFFFF;
    border: 2px solid #8080C0;
    font-weight: bold;
}

QCheckBox {
    color: #FFFFFF;
    font-weight: bold;
}

QCheckBox::indicator {
    width: 15px;
    height: 15px;
    border-radius: 0px;
    border: 2px solid #4040A0;
    background: #000020;
}

QCheckBox::indicator:checked {
    background: #8080C0;
    border: 2px solid #C0C0FF;
}

QCheckBox::indicator:hover {
    border: 2px solid #C0C0FF;
}

QSlider::groove:horizontal {
    background: #202060;
    height: 6px;
    border: 2px solid #4040A0;
    border-radius: 0px;
}

QSlider::handle:horizontal {
    background: #6060A0;
    width: 16px;
    height: 16px;
    margin: -5px 0;
    border: 2px solid #C0C0FF;
    border-radius: 0px;
}

QSlider::handle:horizontal:hover {
    background: #8080C0;
}

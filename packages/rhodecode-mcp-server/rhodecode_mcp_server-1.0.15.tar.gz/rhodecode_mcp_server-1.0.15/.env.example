# Configuración del Servidor MCP RhodeCode
# Copia este archivo a .env y completa con tus valores

# URL de la API de RhodeCode (debe terminar en /_admin/api)
RC_API_URL=https://tu-instancia.rhodecode.com/_admin/api

# Token de autenticación de RhodeCode
# Obtenerlo en: Usuario > Mi cuenta > Auth tokens
RC_API_TOKEN=tu_token_de_autenticacion_aqui

# Timeout en milisegundos para las peticiones (opcional)
# Default: 8000 (8 segundos)
RC_TIMEOUT_MS=8000

# Modo de solo lectura (opcional)
# Si está activado, bloquea operaciones destructivas (crear, actualizar, eliminar, etc.)
# Valores aceptados: true, 1, yes (cualquier otro valor = false)
# Default: false
RC_READONLY=false

# Verificación de certificado SSL (opcional)
# Si está en false, desactiva la verificación SSL (útil para certificados auto-firmados)
# Valores aceptados: true, 1, yes (cualquier otro valor = false)
# Default: false (desactivado por seguridad)
RC_VERIFY_SSL=false

# Ruta a certificado SSL personalizado (opcional)
# Usa esto si tu servidor tiene un certificado auto-firmado o personalizado
# Ejemplo: RC_CERT_PATH=./certs/ca-bundle.pem
# Si está configurado, RC_VERIFY_SSL se ignora
# Default: vacío (no usar certificado personalizado)
RC_CERT_PATH=


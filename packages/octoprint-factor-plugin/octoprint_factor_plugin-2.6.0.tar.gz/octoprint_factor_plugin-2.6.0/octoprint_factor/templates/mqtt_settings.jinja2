  <!-- Main Setup Container -->
  <div class="setup-container">
    <!-- Header -->
    <div class="setup-header">
      <h2 data-i18n="setup.title">FACTOR Device Setup</h2>
      <p class="text-muted" data-i18n="setup.description">

{
  "algorithm": "sha512",
  "merkle_filename": ".merkle_secure",
  "include_hidden": false,
  "follow_symlinks": false,
  "exclude_patterns": [
    "*.tmp",
    "*.bak",
    "*.log",
    "*.cache",
    "__pycache__",
    "*.pyc",
    "*.pyo",
    ".git",
    ".svn",
    ".hg",
    "node_modules",
    ".pytest_cache",
    ".tox",
    "*.egg-info",
    "build",
    "dist",
    ".DS_Store",
    "Thumbs.db",
    "desktop.ini"
  ],
  "max_file_size": 104857600,
  "create_subdirectory_merkles": true,
  "include_metadata": true,
  "chunk_size": 4096
}
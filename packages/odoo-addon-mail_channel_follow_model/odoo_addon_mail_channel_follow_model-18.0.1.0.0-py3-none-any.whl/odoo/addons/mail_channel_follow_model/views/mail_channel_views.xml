<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mail_channel_view_form" model="ir.ui.view">
        <field name="name">mail_channel_follow_model.mail_channel_view_form</field>
        <field name="model">mail.channel</field>
        <field name="inherit_id" ref="mail.mail_channel_view_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="follows" string="Follows">
                    <field
                        name="follower_ids"
                        context="{'default_channel_id': active_id}"
                        nolabel="1"
                    >
                        <list editable="bottom">
                            <field name="model_id" />
                            <field name="subtype_id" />
                            <field name="external_only" />
                        </list>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>

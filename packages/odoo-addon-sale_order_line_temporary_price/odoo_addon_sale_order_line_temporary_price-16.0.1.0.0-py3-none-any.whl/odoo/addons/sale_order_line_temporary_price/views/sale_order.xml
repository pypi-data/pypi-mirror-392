<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.view_order_form.view_order_form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">

            <xpath
                expr="//field[@name='order_line']/tree[1]/field[@name='price_unit']"
                position="after"
            >
                <field name="temp_price_unit" optional="hide" />
            </xpath>

            <xpath
                expr="//field[@name='order_line']/tree[1]/field[@name='price_unit']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'readonly': ['|',('qty_invoiced', '>', 0),('temp_price_unit', '>',
                    0)]}</attribute>
            </xpath>

        </field>
    </record>

</odoo>

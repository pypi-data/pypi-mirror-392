{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Niamoto",
  "version": "0.7.4",
  "identifier": "com.niamoto.desktop",
  "build": {
    "frontendDist": "../src/niamoto/gui/ui/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Niamoto Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "bin/niamoto"
    ]
  },
  "plugins": {}
}

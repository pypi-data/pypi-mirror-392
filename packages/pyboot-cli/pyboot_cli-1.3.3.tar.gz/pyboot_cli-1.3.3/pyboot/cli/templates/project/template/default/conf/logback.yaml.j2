version: 1
disable_existing_loggers: true
formatters:
  simple:
    format: '%(levelname)s:[%(thread_name)s]:[%(_filename)s:%(_lineno)d][%(name)s] - %(asctime_cn)s - %(message)s'
    # format: '%(levelname)s:[%(thread_name)s]:[%(_full_filename)s:%(_lineno)d][%(name)s] - %(asctime_cn)s - %(message)s'
handlers:
  console:
    class: logging.StreamHandler
    level: DEBUG
    formatter: simple
    # encoding: utf-8
    stream: ext://sys.stdout
  file:
    class: logging.handlers.RotatingFileHandler
    level: DEBUG
    formatter: simple
    filename: logs/ea.log
    maxBytes: 10485760  # 10 MB
    backupCount: 5
    encoding: utf-8
loggers:
  dataflow.utils.dbtools:
    level: DEBUG
    handlers: [console, file]
    propagate: False
  dataflow.utils.web.asgi:
    level: DEBUG
    handlers: [console, file]
    propagate: False
  dataflow.utils.schedule:
    level: DEBUG
    handlers: [console, file]
    propagate: False
  dataflow.module:
    level: DEBUG
    handlers: [console, file]
    propagate: False
  dataflow.router:
    level: DEBUG
    handlers: [console, file]
    propagate: False
  dataflowx:
    level: DEBUG
    handlers: [console, file]
    propagate: False
  uvicorn:
    level: INFO
    handlers: [console, file]
    propagate: False
  application:
    level: DEBUG
    handlers: [console, file]
    propagate: False
   
root:
  level: INFO
  handlers: [console, file]
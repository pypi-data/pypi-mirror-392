[project]
name = "{{ project_name }}"
version = "0.0.1"
description = "{{ description }}"
authors = [
    {name = "joinsunsoft", email = "793875613@qq.com"},
]
license-files = ["LICENSE"]
maintainers = [{name = "joinsunsoft", email = "inthirties.liu@hotmail.com"}]
readme = "README.md"
requires-python = ">=3.12.10"
dependencies = [
    "pyboot-dataflow",
    "pyboot-webmvc",
    "pyboot-datasource",
]

[project.optional-dependencies]
dev = [
    "pytest>=6.0.0",
    "pytest-asyncio>=0.15.0"
]

[project.scripts]
{{ project_name }} = "app:main"

[build-system]
requires = ["setuptools>=45", "wheel"]
build-backend = "setuptools.build_meta"

[tool.setuptools.packages.find]
where = ["."]  
## include = ["application*","pyboot*","dataflowx*"]

## [tool.setuptools.package-data]
## "pyboot.cli.templates" = ["**/*.j2","**/etcdv3.db"]

[tool.black]
line-length = 88
target-version = ['py38']

[tool.isort]
profile = "black"
multi_line_output = 3
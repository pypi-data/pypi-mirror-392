<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="stock_lot_condition_view_form" model="ir.ui.view">
        <field name="name">stock.lot.condition.form</field>
        <field name="model">stock.lot.condition</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        invisible="active"
                    />
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="required_note" />
                    </group>
                    <group name="group_description">
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="stock_lot_condition_view_tree" model="ir.ui.view">
        <field name="name">stock.lot.condition.tree</field>
        <field name="model">stock.lot.condition</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="description" optional="hide" />
            </list>
        </field>
    </record>
    <record id="stock_lot_condition_view_search" model="ir.ui.view">
        <field name="name">stock.lot.condition.search</field>
        <field name="model">stock.lot.condition</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <separator />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
            </search>
        </field>
    </record>
    <record id="stock_lot_condition_action" model="ir.actions.act_window">
        <field name="name">Conditions</field>
        <field name="res_model">stock.lot.condition</field>
        <field name="view_mode">list</field>
    </record>
    <menuitem
        id="menu_stock_lot_condition"
        name="Lot conditions"
        action="stock_lot_condition_action"
        parent="stock.menu_product_in_config_stock"
        sequence="10"
    />
</odoo>

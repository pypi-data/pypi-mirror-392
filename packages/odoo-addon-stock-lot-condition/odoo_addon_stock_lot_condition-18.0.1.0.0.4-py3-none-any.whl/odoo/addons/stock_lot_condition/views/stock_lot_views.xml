<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_production_lot_form" model="ir.ui.view">
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="condition_id" widget="selection" />
                <field
                    name="condition_note"
                    invisible="not condition_required_note"
                    required="condition_required_note"
                />
            </field>
        </field>
    </record>
    <record id="view_production_lot_tree" model="ir.ui.view">
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="condition_id" optional="show" />
            </field>
        </field>
    </record>
    <record id="search_product_lot_filter" model="ir.ui.view">
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.search_product_lot_filter" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="condition_id" />
            </field>
            <filter name="group_by_product" position="after">
                <filter
                    string="Condition"
                    name="condition_id"
                    context="{'group_by': 'condition_id'}"
                />
            </filter>
        </field>
    </record>
</odoo>

# Include documentation files
include README.md
include LICENSE
include CHANGELOG.md
include SECURITY.md
include CONTRIBUTING.md
include TROUBLESHOOTING.md

# Include configuration files
include pyproject.toml
include requirements.txt
include Makefile
include .editorconfig

# Include pre-commit configuration
include .pre-commit-config.yaml

# Include example configurations
recursive-include examples *.yaml
include examples/README.md

# Include type stub marker
include docpull/py.typed

# Include all Python files in profiles
recursive-include docpull/profiles *.py

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *~
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude test artifacts and caches
prune tests/__pycache__
prune .pytest_cache
prune .mypy_cache
prune .ruff_cache
prune htmlcov
prune .docpull-cache
prune .git
prune .github

# Exclude build artifacts
prune build
prune dist
prune *.egg-info

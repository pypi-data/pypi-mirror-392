# ============================================
# MIDI Markup Language - Alias System Showcase
# ============================================
#
# This example demonstrates all features of the MML alias system:
# - Basic aliases
# - Parameter types (note, percent, bool, enum)
# - Default values
# - Nested aliases
# - Conditional logic
# - Multi-command aliases
# - Real-world usage patterns

# ============================================
# Section 1: Basic Aliases
# ============================================

@alias simple_preset {ch} {preset} "Basic preset change"
  - pc {ch}.{preset}
@end

@alias simple_cc {ch} {cc_num} {value} "Basic CC message"
  - cc {ch}.{cc_num}.{value}
@end

# ============================================
# Section 2: Parameter Types
# ============================================

@alias play_note {ch} {note:note} {velocity} "Play note (accepts note names)"
  - note_on {ch}.{note}.{velocity} 500ms
@end

@alias set_level {ch} {level:percent} "Set level as percentage"
  - cc {ch}.7.{level}
@end

@alias toggle_effect {ch} {enabled:bool} "Toggle effect on/off"
  - cc {ch}.82.{enabled}
@end

@alias select_mode {ch} {mode=stomp:0,scene:1,preset:2} "Select mode by name"
  - cc {ch}.50.{mode}
@end

# ============================================
# Section 3: Default Values
# ============================================

@alias preset_with_defaults {ch=1} {preset} {velocity=100} "Preset with default channel"
  - pc {ch}.{preset}
  - cc {ch}.7.{velocity}
@end

# ============================================
# Section 4: Multi-Command Aliases
# ============================================

@alias scene_with_reverb {ch} {scene} {reverb_level} "Scene change with reverb"
  - cc {ch}.34.{scene}
  - cc {ch}.91.{reverb_level}
@end

@alias complete_preset_load {ch} {bank} {preset} {expression} "Bank + Preset + Expression"
  - cc {ch}.0.{bank}
  - pc {ch}.{preset}
  - cc {ch}.11.{expression}
@end

# ============================================
# Section 5: Nested Aliases
# ============================================

@alias reverb_cc {ch} {level} "Reverb control"
  - cc {ch}.91.{level}
@end

@alias delay_cc {ch} {level} "Delay control"
  - cc {ch}.93.{level}
@end

@alias ambient_setup {ch} {preset} {reverb} {delay} "Preset with ambient effects"
  - simple_preset {ch} {preset}
  - reverb_cc {ch} {reverb}
  - delay_cc {ch} {delay}
@end

# ============================================
# Section 6: Conditional Logic (Stage 7)
# ============================================

@alias device_load {ch} {preset} {device=cortex:0,helix:1,kemper:2} "Device-aware preset load"
  @if {device} == 0
    # Quad Cortex uses program change
    - pc {ch}.{preset}
  @elif {device} == 1
    # Helix uses CC 69 for snapshots
    - cc {ch}.69.{preset}
  @else
    # Kemper uses program change
    - pc {ch}.{preset}
  @end
@end

@alias dynamic_velocity {ch} {note:note} {intensity:0-2} "Velocity based on intensity"
  @if {intensity} == 0
    - note_on {ch}.{note}.50 500ms
  @elif {intensity} == 1
    - note_on {ch}.{note}.90 500ms
  @else
    - note_on {ch}.{note}.127 500ms
  @end
@end

@alias smart_scene {ch} {scene} {complexity:0-2} "Scene with complexity-based effects"
  @if {complexity} == 0
    # Simple - just scene
    - cc {ch}.34.{scene}
  @elif {complexity} == 1
    # Medium - scene + reverb
    - cc {ch}.34.{scene}
    - cc {ch}.91.64
  @else
    # Complex - scene + reverb + delay
    - cc {ch}.34.{scene}
    - cc {ch}.91.95
    - cc {ch}.93.80
  @end
@end


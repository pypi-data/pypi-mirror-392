  - cc {ch}.11.10
@end

# ============================================
# Section 8: Expression Automation
# ============================================

@alias swell {ch} {amount:percent} "Volume swell"
  - cc {ch}.11.{amount}
@end

@alias fade_out {ch} {start:percent} {end:percent} "Fade from start to end"
  - cc {ch}.7.{start}
  - cc {ch}.7.{end}
@end


# ============================================================================
# COMMON PROGRESSIONS (Multi-chord sequences)
# ============================================================================

@alias prog_i_iv_v {ch} {root} {vel} {dur} "I-IV-V progression in major"
  # I chord (major)
  - note_on {ch}.{root} {vel} {dur}
  [@]
  - note_on {ch}.{root+4} {vel} {dur}
  [@]
  - note_on {ch}.{root+7} {vel} {dur}

  # Wait for next chord
  [+{dur}]

  # IV chord (major, up 5 semitones)
  - note_on {ch}.{root+5} {vel} {dur}
  [@]
  - note_on {ch}.{root+9} {vel} {dur}
  [@]
  - note_on {ch}.{root+12} {vel} {dur}

  # Wait for next chord
  [+{dur}]

  # V chord (major, up 7 semitones)
  - note_on {ch}.{root+7} {vel} {dur}
  [@]
  - note_on {ch}.{root+11} {vel} {dur}
  [@]
  - note_on {ch}.{root+14} {vel} {dur}
@end

@alias prog_ii_v_i {ch} {root} {vel} {dur} "ii-V-I jazz progression"
  # ii chord (minor 7th, up 2 semitones)
  - note_on {ch}.{root+2} {vel} {dur}
  [@]
  - note_on {ch}.{root+5} {vel} {dur}
  [@]
  - note_on {ch}.{root+9} {vel} {dur}
  [@]
  - note_on {ch}.{root+12} {vel} {dur}

  [+{dur}]

  # V chord (dominant 7th, up 7 semitones)
  - note_on {ch}.{root+7} {vel} {dur}
  [@]
  - note_on {ch}.{root+11} {vel} {dur}
  [@]
  - note_on {ch}.{root+14} {vel} {dur}
  [@]
  - note_on {ch}.{root+17} {vel} {dur}

  [+{dur}]

  # I chord (major 7th)
  - note_on {ch}.{root} {vel} {dur}
  [@]
  - note_on {ch}.{root+4} {vel} {dur}
  [@]
  - note_on {ch}.{root+7} {vel} {dur}
  [@]
  - note_on {ch}.{root+11} {vel} {dur}
@end

@alias prog_pop {ch} {root} {vel} {dur} "I-V-vi-IV (pop progression)"
  # I (major)
  - note_on {ch}.{root} {vel} {dur}
  [@]
  - note_on {ch}.{root+4} {vel} {dur}
  [@]
  - note_on {ch}.{root+7} {vel} {dur}

  [+{dur}]

  # V (major, up 7 semitones)
  - note_on {ch}.{root+7} {vel} {dur}
  [@]
  - note_on {ch}.{root+11} {vel} {dur}
  [@]
  - note_on {ch}.{root+14} {vel} {dur}

  [+{dur}]

  # vi (minor, up 9 semitones)
  - note_on {ch}.{root+9} {vel} {dur}
  [@]
  - note_on {ch}.{root+12} {vel} {dur}
  [@]
  - note_on {ch}.{root+16} {vel} {dur}

  [+{dur}]

  # IV (major, up 5 semitones)
  - note_on {ch}.{root+5} {vel} {dur}
  [@]
  - note_on {ch}.{root+9} {vel} {dur}
  [@]
  - note_on {ch}.{root+12} {vel} {dur}
@end


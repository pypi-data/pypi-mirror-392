# Include essential documentation files
include README.md
include LICENSE
include CHANGES.md
include pyproject.toml

# Include all Python files in the package
recursive-include UR2CUTE *.py
recursive-include UR2CUTE py.typed

# Exclude development and build files
exclude setup.py
exclude test_fixes.py
recursive-exclude tests *
recursive-exclude docs *
recursive-exclude .github *

# Exclude common development artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib
global-exclude .git*
global-exclude .vscode
global-exclude .idea
global-exclude *.egg-info
global-exclude dist
global-exclude build

# Exclude checkpoint and temporary files
global-exclude *.pt
global-exclude *.pkl
global-exclude *.pickle
global-exclude *checkpoint*

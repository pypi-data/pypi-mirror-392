[pytest]
# Django settings
DJANGO_SETTINGS_MODULE = {{ name | snake_case }}.settings
django_find_project = true

# Test discovery patterns
python_files = test_*.py *_test.py
python_classes = Test* *Tests
python_functions = test_*

# Test execution options
addopts =
    # Verbosity and output
    -v
    --tb=short
    --strict-markers
    --strict-config

    # Django-specific
    --reuse-db
    --nomigrations

    # Performance
    --maxfail=5
    --durations=10

    # Warnings
    --disable-warnings
    -p no:warnings

    # Coverage (uncomment to enable)
    # --cov={{ name }}
    # --cov-report=html
    # --cov-report=term-missing
    # --cov-fail-under=80

    # Output formatting
    --color=yes

# Markers
markers =
    unit: Fast unit tests with no external dependencies (deselect with '-m "not unit"')
    integration: Tests requiring database, multiple models, or external services
    slow: Slow tests that take more than 1 second
    api: API endpoint tests
    auth: Authentication and authorization tests
    models: Model-specific tests
    serializers: Serializer tests
    views: View tests
    permissions: Permission tests
    smoke: Smoke tests for critical functionality
    regression: Regression tests for fixed bugs
    django_db: Tests requiring database access

# Test paths
testpaths = tests

# Minimum Python version
minversion = 3.8

# Console output options
console_output_style = progress

# Log configuration
log_cli = false
log_cli_level = INFO
log_cli_format = %(asctime)s [%(levelname)8s] %(message)s
log_cli_date_format = %Y-%m-%d %H:%M:%S

log_file = tests/logs/pytest.log
log_file_level = DEBUG
log_file_format = %(asctime)s [%(levelname)8s] %(name)s - %(message)s
log_file_date_format = %Y-%m-%d %H:%M:%S

# Django database configuration
django_debug_mode = false

# Filterwarnings
filterwarnings =
    error
    ignore::UserWarning
    ignore::DeprecationWarning
    ignore::PendingDeprecationWarning
    # Django specific warnings to ignore
    ignore:.*django\.utils\.encoding.*:DeprecationWarning
    ignore:.*distutils.*:DeprecationWarning

# pytest-xdist settings (for parallel execution)
# Uncomment to enable parallel testing
# -n auto

# Collection
norecursedirs =
    .git
    .tox
    dist
    build
    *.egg
    __pycache__
    .venv
    venv
    env
    node_modules
    migrations

# Doctest options (if using doctests)
doctest_optionflags =
    NORMALIZE_WHITESPACE
    IGNORE_EXCEPTION_DETAIL
    ELLIPSIS

[coverage:run]
source = {{ name | snake_case }}
omit =
    */migrations/*
    */tests/*
    */test_*.py
    */__init__.py
    */settings/*
    */wsgi.py
    */asgi.py
    */manage.py
    */conftest.py

[coverage:report]
precision = 2
show_missing = true
skip_covered = false
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abstract
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[coverage:html]
directory = htmlcov


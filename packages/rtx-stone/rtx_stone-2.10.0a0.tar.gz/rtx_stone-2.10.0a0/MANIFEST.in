# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include RELEASE_NOTES.md
include QUICK_START.md

# Include installation and configuration
include install.ps1
include requirements.txt
include pyproject.toml
include setup.py

# Include examples
recursive-include examples *.py
recursive-include examples *.md

# Include GitHub templates
recursive-include .github *.md
recursive-include .github *.yml
recursive-include .github *.json

# Include notebooks
recursive-include notebooks *.ipynb
recursive-include notebooks *.md

# Include integration guides
recursive-include integrations *.py
recursive-include integrations *.md

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
recursive-include docs *.png
recursive-include docs *.jpg

# Exclude development and build files
exclude .gitignore
exclude .flake8
exclude .mypy_cache
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store

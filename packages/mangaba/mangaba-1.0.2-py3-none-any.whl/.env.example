# ========================================
# MANGABA AI - Configuração de Ambiente
# ========================================
# 
# Copie este arquivo para .env e configure suas credenciais
# 
# Windows:  copy .env.example .env
# Linux/Mac: cp .env.example .env

# ==========================================
# CREDENCIAIS (OBRIGATÓRIO)
# ==========================================

# Google Generative AI API Key
# Obtenha em: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# ==========================================
# CONFIGURAÇÕES DO MODELO (OPCIONAL)
# ==========================================

# Modelo do Google Gemini a ser usado
# Opções: gemini-2.5-flash, gemini-pro, gemini-pro-vision
MODEL_NAME=gemini-2.5-flash

# Temperatura do modelo (0.0 a 1.0)
# Valores baixos = mais determinístico
# Valores altos = mais criativo
MODEL_TEMPERATURE=0.7

# ==========================================
# CONFIGURAÇÕES DO AGENTE (OPCIONAL)
# ==========================================

# Nome/ID do agente
AGENT_NAME=MangabaAgent

# Habilitar protocolo MCP (Model Context Protocol)
# true = contexto automático habilitado
# false = sem gerenciamento de contexto
MCP_ENABLED=true

# Máximo de contextos a manter em memória
MCP_MAX_CONTEXTS=1000

# ==========================================
# LOGGING (OPCIONAL)
# ==========================================

# Nível de log
# Opções: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Diretório para arquivos de log
LOG_DIR=logs

# ==========================================
# AMBIENTE (OPCIONAL)
# ==========================================

# Ambiente de execução
# Opções: development, production, testing
ENVIRONMENT=development

# Modo debug
# true = logs detalhados e stack traces completos
# false = logs apenas essenciais
DEBUG=false

# ==========================================
# TIMEOUTS E LIMITES (OPCIONAL)
# ==========================================

# Timeout para requisições API (segundos)
API_TIMEOUT=30

# Máximo de tentativas em caso de erro
MAX_RETRIES=3

# Delay entre tentativas (segundos)
RETRY_DELAY=1

# ==========================================
# A2A PROTOCOL (OPCIONAL)
# ==========================================

# Porta para comunicação A2A
A2A_PORT=8080

# Habilitar broadcast
A2A_ENABLE_BROADCAST=true

# ==========================================
# AVANÇADO (NÃO MODIFICAR NORMALMENTE)
# ==========================================

# Cache de contextos MCP
MCP_CACHE_ENABLED=true

# Expiração de cache (horas)
MCP_CACHE_TTL=24

# Tamanho máximo do histórico de mensagens A2A
A2A_MAX_HISTORY=100

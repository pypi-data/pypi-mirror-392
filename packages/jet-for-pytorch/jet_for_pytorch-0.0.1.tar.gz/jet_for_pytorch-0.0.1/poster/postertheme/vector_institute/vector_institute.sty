\newcommand{\specialblock}[2]{%
  {
    \colorlet{backgroundcolor}{white}
    \colorlet{innerblocktitlebgcolor}{white}
    \colorlet{innerblockbodybgcolor}{white}
    \colorlet{blocktitlefgcolor}{white}
    \colorlet{blocktitlebgcolor}{white}
    \colorlet{blockbodybgcolor}{white}
    \block{#1}{#2}
  }
}

\newcommand{\ribbon}[1]{%
  {
    \colorlet{backgroundcolor}{VectorPink}
    \colorlet{innerblocktitlebgcolor}{VectorPink}
    \colorlet{innerblockbodybgcolor}{VectorPink}
    \colorlet{blocktitlefgcolor}{VectorPink}
    \colorlet{blockbodyfgcolor}{black}
    \colorlet{blocktitlebgcolor}{VectorPink}
    \colorlet{blockbodybgcolor}{VectorPink}
    \block{}{#1}
  }
}

\newcommand{\backgroundgradient}{
  % Draw color gradient in background
  % Define topleft and bottomright (https://tex.stackexchange.com/a/505515)
  % TikZposter only defines topright and bottomleft
  \coordinate (topleft)     at (topright -| bottomleft);
  \coordinate (bottomright) at (topright |- bottomleft);
  \filldraw[%
  right color=VectorPink,%
  left color=VectorBlue,%
  shading=axis,%
  shading angle=45,%
  ] (topleft) rectangle  (bottomright);%
}

\newcommand{\posterfooter}[1]{
  \node [above right,
  outer sep=0pt,
  minimum width=\paperwidth,
  minimum height=35mm, align=flush right,  text width=\linewidth,
  fill=titlebgcolor] at (bottomleft) {
    \Large\color{titlefgcolor}{#1}
    \hspace*{15mm}};
}


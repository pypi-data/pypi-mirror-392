{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "command"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Task ID"
    },
    "command": {
      "type": "string",
      "description": "Command to execute"
    },
    "meta": {
      "type": "object",
      "properties": {
        "include": {
          "oneOf": [
            {
              "type": "string",
              "description": "Path to configuration file"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of configuration file paths"
            }
          ]
        }
      },
      "additionalProperties": true
    },
    "bizdata": {
      "type": "object",
      "properties": {
        "include": {
          "oneOf": [
            {
              "type": "string",
              "description": "Path to business data file"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of business data file paths"
            }
          ]
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
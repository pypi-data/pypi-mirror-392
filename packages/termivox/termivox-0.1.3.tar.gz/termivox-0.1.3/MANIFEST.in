# Include documentation
include README.md
include LICENSE
include requirements.txt

# Include configuration files
recursive-include config *.json

# Include shell scripts
include run.sh
include install.sh

# Include model download scripts
include download_model.py
include download_vosk_model.py

# Exclude development files
exclude .gitignore
exclude ENHANCEMENT_PLAN.md
exclude 1ENHANCEMENT_PLAN.md

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class

# Exclude voice models (too large for PyPI)
prune voice_models

# Exclude git directory
prune .git

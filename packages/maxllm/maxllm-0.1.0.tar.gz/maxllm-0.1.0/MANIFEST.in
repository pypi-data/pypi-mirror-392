# Include README and LICENSE
include README.md
include LICENSE

# Exclude configuration files (users should create their own)
exclude maxllm.yaml
exclude *.yaml
exclude *.yml

# Exclude cache and log directories
recursive-exclude .diskcache *
recursive-exclude .batch *
recursive-exclude logs *

# Exclude IDE and environment files
exclude .env
exclude .env.*
recursive-exclude .vscode *
recursive-exclude .idea *

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so

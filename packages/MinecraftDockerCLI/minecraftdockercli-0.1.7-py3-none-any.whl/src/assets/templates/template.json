{
  "compose": {
    "services": [
      {
        "name": "server",
        "build": {
          "context": "./servers/server/"
        },
        "env_file": "./servers/server/.env",
        "volume": "server_data:/server",
        "ports": [
          "${HOST_PORT}:${HOST_PORT}"
        ],
        "expose": [
          "${HOST_PORT}"
        ],
        "networks": [
          "mc-network"
        ],
        "resources": {
          "limits": {
            "cpus": 1,
            "memory": "1g"
          },
          "reservations": {
            "cpus": 1,
            "memory": "1g"
          }
        }
      }
    ],
    "volumes": [
      "server_data"
    ],
    "networks": [
      "mc-network"
    ]
  },
  "envs": [
    {
      "CONTAINER_NAME": "server",
      "SERVER_JAR": "",
      "JAVA_ARGS": "",
      "MIN_HEAP_SIZE": "",
      "MAX_HEAP_SIZE": "",
      "HOST_PORTS": {
        "HOST_PORT": 25565
      }
    }
  ]
}

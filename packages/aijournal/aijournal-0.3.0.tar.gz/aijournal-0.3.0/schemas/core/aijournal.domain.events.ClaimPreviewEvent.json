{
  "$defs": {
    "ClaimConflictPayload": {
      "description": "Structured conflict emitted during consolidation previews.",
      "properties": {
        "claim_id": {
          "title": "Claim Id",
          "type": "string"
        },
        "existing_value": {
          "title": "Existing Value",
          "type": "string"
        },
        "incoming_sources": {
          "items": {
            "$ref": "#/$defs/SourceRef"
          },
          "title": "Incoming Sources",
          "type": "array"
        },
        "incoming_value": {
          "title": "Incoming Value",
          "type": "string"
        },
        "signature": {
          "$ref": "#/$defs/ClaimSignaturePayload"
        },
        "statement": {
          "title": "Statement",
          "type": "string"
        }
      },
      "required": [
        "claim_id",
        "signature",
        "statement",
        "existing_value",
        "incoming_value"
      ],
      "title": "ClaimConflictPayload",
      "type": "object"
    },
    "ClaimEventAction": {
      "enum": [
        "upsert",
        "update",
        "delete",
        "conflict",
        "strength_delta"
      ],
      "title": "ClaimEventAction",
      "type": "string"
    },
    "ClaimSignaturePayload": {
      "description": "Serialized signature describing the target slot for a claim.",
      "properties": {
        "claim_type": {
          "title": "Claim Type",
          "type": "string"
        },
        "conditions": {
          "items": {
            "type": "string"
          },
          "title": "Conditions",
          "type": "array"
        },
        "context": {
          "items": {
            "type": "string"
          },
          "title": "Context",
          "type": "array"
        },
        "domain": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Domain"
        },
        "predicate": {
          "title": "Predicate",
          "type": "string"
        },
        "subject": {
          "title": "Subject",
          "type": "string"
        }
      },
      "required": [
        "claim_type",
        "subject",
        "predicate"
      ],
      "title": "ClaimSignaturePayload",
      "type": "object"
    },
    "SourceRef": {
      "description": "Reference to a normalized entry and the supporting spans.",
      "properties": {
        "entry_id": {
          "title": "Entry Id",
          "type": "string"
        },
        "spans": {
          "items": {
            "$ref": "#/$defs/Span"
          },
          "title": "Spans",
          "type": "array"
        }
      },
      "required": [
        "entry_id"
      ],
      "title": "SourceRef",
      "type": "object"
    },
    "Span": {
      "description": "Detailed pointer back into a source document.",
      "properties": {
        "end": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "End"
        },
        "index": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Index"
        },
        "start": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Start"
        },
        "text": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Text"
        },
        "type": {
          "title": "Type",
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "title": "Span",
      "type": "object"
    }
  },
  "description": "Outcome of attempting to merge a claim proposal into existing atoms.",
  "properties": {
    "action": {
      "$ref": "#/$defs/ClaimEventAction"
    },
    "claim_id": {
      "title": "Claim Id",
      "type": "string"
    },
    "conflict": {
      "anyOf": [
        {
          "$ref": "#/$defs/ClaimConflictPayload"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "delta_strength": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Delta Strength"
    },
    "kind": {
      "default": "preview",
      "title": "Kind",
      "type": "string"
    },
    "related_action": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Related Action"
    },
    "related_claim_id": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Related Claim Id"
    },
    "related_signature": {
      "anyOf": [
        {
          "$ref": "#/$defs/ClaimSignaturePayload"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "signature": {
      "anyOf": [
        {
          "$ref": "#/$defs/ClaimSignaturePayload"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    },
    "statement": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Statement"
    },
    "strength": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Strength"
    },
    "value": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Value"
    }
  },
  "required": [
    "action",
    "claim_id"
  ],
  "title": "ClaimPreviewEvent",
  "type": "object"
}

{
  "$defs": {
    "ClaimConflictPayload": {
      "description": "Structured conflict emitted during consolidation previews.",
      "properties": {
        "claim_id": {
          "title": "Claim Id",
          "type": "string"
        },
        "existing_value": {
          "title": "Existing Value",
          "type": "string"
        },
        "incoming_sources": {
          "items": {
            "$ref": "#/$defs/SourceRef"
          },
          "title": "Incoming Sources",
          "type": "array"
        },
        "incoming_value": {
          "title": "Incoming Value",
          "type": "string"
        },
        "signature": {
          "$ref": "#/$defs/ClaimSignaturePayload"
        },
        "statement": {
          "title": "Statement",
          "type": "string"
        }
      },
      "required": [
        "claim_id",
        "signature",
        "statement",
        "existing_value",
        "incoming_value"
      ],
      "title": "ClaimConflictPayload",
      "type": "object"
    },
    "ClaimEventAction": {
      "enum": [
        "upsert",
        "update",
        "delete",
        "conflict",
        "strength_delta"
      ],
      "title": "ClaimEventAction",
      "type": "string"
    },
    "ClaimMethod": {
      "enum": [
        "self_report",
        "inferred",
        "behavioral"
      ],
      "title": "ClaimMethod",
      "type": "string"
    },
    "ClaimPreviewEvent": {
      "description": "Outcome of attempting to merge a claim proposal into existing atoms.",
      "properties": {
        "action": {
          "$ref": "#/$defs/ClaimEventAction"
        },
        "claim_id": {
          "title": "Claim Id",
          "type": "string"
        },
        "conflict": {
          "anyOf": [
            {
              "$ref": "#/$defs/ClaimConflictPayload"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "delta_strength": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Delta Strength"
        },
        "kind": {
          "default": "preview",
          "title": "Kind",
          "type": "string"
        },
        "related_action": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Related Action"
        },
        "related_claim_id": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Related Claim Id"
        },
        "related_signature": {
          "anyOf": [
            {
              "$ref": "#/$defs/ClaimSignaturePayload"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "signature": {
          "anyOf": [
            {
              "$ref": "#/$defs/ClaimSignaturePayload"
            },
            {
              "type": "null"
            }
          ],
          "default": null
        },
        "statement": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Statement"
        },
        "strength": {
          "anyOf": [
            {
              "type": "number"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Strength"
        },
        "value": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Value"
        }
      },
      "required": [
        "action",
        "claim_id"
      ],
      "title": "ClaimPreviewEvent",
      "type": "object"
    },
    "ClaimProposal": {
      "description": "Structured claim update prepared for downstream review.",
      "properties": {
        "evidence": {
          "items": {
            "$ref": "#/$defs/SourceRef"
          },
          "title": "Evidence",
          "type": "array"
        },
        "manifest_hashes": {
          "items": {
            "type": "string"
          },
          "title": "Manifest Hashes",
          "type": "array"
        },
        "method": {
          "$ref": "#/$defs/ClaimMethod"
        },
        "normalized_ids": {
          "items": {
            "type": "string"
          },
          "title": "Normalized Ids",
          "type": "array"
        },
        "predicate": {
          "title": "Predicate",
          "type": "string"
        },
        "rationale": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Rationale"
        },
        "review_after_days": {
          "title": "Review After Days",
          "type": "integer"
        },
        "scope": {
          "$ref": "#/$defs/Scope"
        },
        "statement": {
          "title": "Statement",
          "type": "string"
        },
        "status": {
          "$ref": "#/$defs/ClaimStatus"
        },
        "strength": {
          "title": "Strength",
          "type": "number"
        },
        "subject": {
          "title": "Subject",
          "type": "string"
        },
        "type": {
          "$ref": "#/$defs/ClaimType"
        },
        "user_verified": {
          "title": "User Verified",
          "type": "boolean"
        },
        "value": {
          "title": "Value",
          "type": "string"
        }
      },
      "required": [
        "type",
        "subject",
        "predicate",
        "value",
        "statement",
        "scope",
        "strength",
        "status",
        "method",
        "user_verified",
        "review_after_days"
      ],
      "title": "ClaimProposal",
      "type": "object"
    },
    "ClaimSignaturePayload": {
      "description": "Serialized signature describing the target slot for a claim.",
      "properties": {
        "claim_type": {
          "title": "Claim Type",
          "type": "string"
        },
        "conditions": {
          "items": {
            "type": "string"
          },
          "title": "Conditions",
          "type": "array"
        },
        "context": {
          "items": {
            "type": "string"
          },
          "title": "Context",
          "type": "array"
        },
        "domain": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Domain"
        },
        "predicate": {
          "title": "Predicate",
          "type": "string"
        },
        "subject": {
          "title": "Subject",
          "type": "string"
        }
      },
      "required": [
        "claim_type",
        "subject",
        "predicate"
      ],
      "title": "ClaimSignaturePayload",
      "type": "object"
    },
    "ClaimStatus": {
      "enum": [
        "accepted",
        "tentative",
        "rejected"
      ],
      "title": "ClaimStatus",
      "type": "string"
    },
    "ClaimType": {
      "enum": [
        "preference",
        "value",
        "goal",
        "boundary",
        "trait",
        "habit",
        "aversion",
        "skill"
      ],
      "title": "ClaimType",
      "type": "string"
    },
    "MicroFact": {
      "properties": {
        "confidence": {
          "title": "Confidence",
          "type": "number"
        },
        "evidence": {
          "$ref": "#/$defs/SourceRef"
        },
        "first_seen": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "First Seen"
        },
        "id": {
          "title": "Id",
          "type": "string"
        },
        "last_seen": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Last Seen"
        },
        "statement": {
          "title": "Statement",
          "type": "string"
        }
      },
      "required": [
        "id",
        "statement",
        "confidence",
        "evidence"
      ],
      "title": "MicroFact",
      "type": "object"
    },
    "ProfileUpdatePreview": {
      "description": "Preview metadata bundled with a profile update batch.",
      "properties": {
        "claim_events": {
          "items": {
            "$ref": "#/$defs/ClaimPreviewEvent"
          },
          "title": "Claim Events",
          "type": "array"
        },
        "interview_prompts": {
          "items": {
            "type": "string"
          },
          "title": "Interview Prompts",
          "type": "array"
        }
      },
      "title": "ProfileUpdatePreview",
      "type": "object"
    },
    "Scope": {
      "description": "Contextual qualifiers for a claim atom.",
      "properties": {
        "conditions": {
          "items": {
            "type": "string"
          },
          "title": "Conditions",
          "type": "array"
        },
        "context": {
          "items": {
            "type": "string"
          },
          "title": "Context",
          "type": "array"
        },
        "domain": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Domain"
        }
      },
      "title": "Scope",
      "type": "object"
    },
    "SourceRef": {
      "description": "Reference to a normalized entry and the supporting spans.",
      "properties": {
        "entry_id": {
          "title": "Entry Id",
          "type": "string"
        },
        "spans": {
          "items": {
            "$ref": "#/$defs/Span"
          },
          "title": "Spans",
          "type": "array"
        }
      },
      "required": [
        "entry_id"
      ],
      "title": "SourceRef",
      "type": "object"
    },
    "Span": {
      "description": "Detailed pointer back into a source document.",
      "properties": {
        "end": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "End"
        },
        "index": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Index"
        },
        "start": {
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Start"
        },
        "text": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ],
          "default": null,
          "title": "Text"
        },
        "type": {
          "title": "Type",
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "title": "Span",
      "type": "object"
    }
  },
  "properties": {
    "claim_proposals": {
      "items": {
        "$ref": "#/$defs/ClaimProposal"
      },
      "title": "Claim Proposals",
      "type": "array"
    },
    "facts": {
      "items": {
        "$ref": "#/$defs/MicroFact"
      },
      "title": "Facts",
      "type": "array"
    },
    "preview": {
      "anyOf": [
        {
          "$ref": "#/$defs/ProfileUpdatePreview"
        },
        {
          "type": "null"
        }
      ],
      "default": null
    }
  },
  "title": "MicroFactsFile",
  "type": "object"
}

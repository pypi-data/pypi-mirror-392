# Ontologia Playground Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================
PROJECT_NAME=ontologia-playground
COMPOSE_PROJECT_NAME=ontologia-playground

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PORT=5432
POSTGRES_DB=ontologia
POSTGRES_USER=ontologia
POSTGRES_PASSWORD=ontologia123

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=8000
API_HOST=0.0.0.0
API_ONTOLOGY=default

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate secure secrets for production
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TTL_MINUTES=60

# =============================================================================
# FEATURE FLAGS - ALL ENABLED FOR PLAYGROUND
# =============================================================================
STORAGE_MODE=sql_kuzu
KUZU_PATH=/app/data/graph.kuzu
KUZU_PORT=8001
ENABLE_SEARCH=true
ENABLE_WORKFLOWS=true
ENABLE_REALTIME=true
ENABLE_ORCHESTRATION=true

# =============================================================================
# SEARCH CONFIGURATION (ELASTICSEARCH)
# =============================================================================
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_NODE_PORT=9300
ELASTICSEARCH_HOSTS=http://elasticsearch:9200
ELASTICSEARCH_INDEX=ontologia_playground

# =============================================================================
# REAL-TIME CONFIGURATION (REDIS)
# =============================================================================
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379
REDIS_CHANNELS=ontologia:*

# Redis Commander UI
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# =============================================================================
# WORKFLOW CONFIGURATION (TEMPORAL)
# =============================================================================
TEMPORAL_UI_PORT=7233
TEMPORAL_GRPC_PORT=7234
TEMPORAL_ADDRESS=temporal:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=playground-tasks

# =============================================================================
# ORCHESTRATION CONFIGURATION (DAGSTER)
# =============================================================================
DAGSTER_PORT=3000
DAGSTER_POSTGRES_PORT=5433
DAGSTER_HOME=/app/dagster

# =============================================================================
# MESSAGE QUEUE CONFIGURATION (RABBITMQ)
# =============================================================================
RABBITMQ_PORT=5672
RABBITMQ_MGMT_PORT=15672
RABBITMQ_USER=ontologia
RABBITMQ_PASSWORD=ontologia123
RABBITMQ_URL=amqp://ontologia:ontologia123@rabbitmq:5672/

# =============================================================================
# GRAPH DATABASE CONFIGURATION (KÃ™ZUDB)
# =============================================================================
KUZU_SHELL_PORT=8002

# =============================================================================
# ANALYTICS CONFIGURATION (DUCKDB)
# =============================================================================
DUCKDB_PATH=/app/data/analytics.duckdb

# =============================================================================
# VISUALIZATION AND MONITORING
# =============================================================================

# Kibana
KIBANA_PORT=5601

# Marimo
MARIMO_PORT=8888

# Streamlit Dashboard
DASHBOARD_PORT=8501

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# pgAdmin
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@ontologia.dev
PGADMIN_PASSWORD=admin123

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
ONTOLOGIA_DEV_MODE=true

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
API_WORKERS=2
CACHE_TTL=3600
BATCH_SIZE=1000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment these for development overrides

# Disable heavy services for faster startup
# DISABLE_ELASTICSEARCH=true
# DISABLE_KIBANA=true
# DISABLE_GRAFANA=true
# DISABLE_PROMETHEUS=true

# Reduce resource usage
# API_WORKERS=1
# TEMPORAL_WORKERS=1
# DAGSTER_WORKERS=1

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Uncomment these for production settings

# Generate secure secrets (use: openssl rand -hex 32)
# SECRET_KEY=your-secure-secret-key-here
# JWT_SECRET_KEY=your-secure-jwt-secret-key-here

# Production passwords
# POSTGRES_PASSWORD=your-secure-postgres-password
# REDIS_PASSWORD=your-secure-redis-password
# RABBITMQ_PASSWORD=your-secure-rabbitmq-password

# Production feature flags
# ONTOLOGIA_DEV_MODE=false
# LOG_LEVEL=WARNING

# Production scaling
# API_WORKERS=4
# TEMPORAL_WORKERS=3
# DAGSTER_WORKERS=2

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================
# Use these if you want to connect to external services instead of
# the ones provided by the playground

# External PostgreSQL
# DATABASE_URL=postgresql://user:password@external-host:5432/database

# External Elasticsearch
# ELASTICSEARCH_HOSTS=http://external-elasticsearch:9200

# External Redis
# REDIS_URL=redis://:password@external-redis:6379

# External Temporal
# TEMPORAL_ADDRESS=external-temporal:7233

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# Add your custom environment variables here

# Custom API settings
# API_RATE_LIMIT=1000
# API_TIMEOUT=30

# Custom analytics settings
# ANALYTICS_RETENTION_DAYS=90
# ANALYTICS_BATCH_SIZE=5000

# Custom monitoring settings
# METRICS_INTERVAL=30
# ALERT_WEBHOOK_URL=https://your-webhook-url.com

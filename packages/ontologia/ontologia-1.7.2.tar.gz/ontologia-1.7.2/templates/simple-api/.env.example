# Simple API Template Environment Configuration
# Copy this file to .env and customize for your project

# Project Configuration
PROJECT_NAME=my-ontology-api

# Database Configuration
DATABASE_URL=postgresql://ontologia:ontologia123@localhost:5432/ontologia
POSTGRES_PORT=5432

# Security Configuration
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TTL_MINUTES=60

# API Configuration
API_HOST=localhost
API_PORT=8000
API_ONTOLOGY=default

# Feature Flags - Simple API Mode (all disabled for minimal setup)
STORAGE_MODE=sql_only
ENABLE_SEARCH=false
ENABLE_WORKFLOWS=false
ENABLE_REALTIME=false
ENABLE_ORCHESTRATION=false

# Development Mode
ONTOLOGIA_DEV_MODE=true

# Optional Tools Configuration
PGADMIN_EMAIL=admin@ontologia.dev
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

DOCS_PORT=8080

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance (optional)
API_WORKERS=1
API_RELOAD=true

# When upgrading to analytics mode, uncomment these:
# DUCKDB_PATH=./data/analytics.duckdb
# ENABLE_ORCHESTRATION=true

# When upgrading to search mode, uncomment these:
# ELASTICSEARCH_HOSTS=localhost:9200
# ENABLE_SEARCH=true

# When upgrading to graph mode, uncomment these:
# KUZU_PATH=./data/graph.kuzu
# STORAGE_MODE=sql_kuzu

# When upgrading to workflows mode, uncomment these:
# TEMPORAL_ADDRESS=127.0.0.1:7233
# TEMPORAL_NAMESPACE=default
# TEMPORAL_TASK_QUEUE=actions
# ENABLE_WORKFLOWS=true

# When upgrading to enterprise mode, uncomment these:
# REDIS_URL=redis://localhost:6379
# ENABLE_REALTIME=true

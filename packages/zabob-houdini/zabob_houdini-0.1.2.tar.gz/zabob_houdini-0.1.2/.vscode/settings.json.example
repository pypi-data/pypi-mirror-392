{
    // === Project-specific settings for Zabob-Houdini ===
    // Copy this file to settings.json to get started, then add your personal preferences

    // Spell checking with project dictionary
    "cSpell.customDictionaries": {
        "project-dictionary": {
            "name": "project-dictionary",
            "path": "${workspaceFolder}/.vscode/project-dictionary.txt",
            "description": "Project-specific dictionary for Zabob-Houdini",
            "addWords": true
        }
    },

    // Python environment configuration
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    "python.envFile": "${workspaceFolder}/.env",

    // Houdini integration for IntelliSense
    "python.analysis.extraPaths": [
        "${env:HOUDINI_PATH}/houdini/python3.11libs"
    ],
    "python.analysis.autoImportCompletions": true,

    // Enhanced Houdini type hints
    "python.analysis.stubPath": "${workspaceFolder}/stubs",

    // Exclude .venv from Python LSP analysis
    "python.analysis.exclude": [
        ".venv/**"
    ],

    // Markdown linting configuration - suppress overly strict formatting rules
    // MD013: Line length (overly restrictive for documentation)
    // MD021: Multiple spaces inside hashes on closed ATX style headings
    // MD022: Headings should be surrounded by blank lines
    // MD031: Fenced code blocks should be surrounded by blank lines
    // MD032: Lists should be surrounded by blank lines
    "markdownlint.config": {
        "MD013": false,
        "MD021": false,
        "MD022": false,
        "MD031": false,
        "MD032": false
    }

    // === Add your personal settings below ===
    // "editor.fontSize": 14,
    // "editor.theme": "your-favorite-theme",
    // "python.formatting.provider": "black"
}

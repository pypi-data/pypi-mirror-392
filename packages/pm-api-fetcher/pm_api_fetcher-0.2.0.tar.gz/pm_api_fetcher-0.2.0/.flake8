[flake8]
extend-ignore =
    E203,
    E501,
    W503,
    E402,
    F401,
    I100,
    I101,
    F841

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

per-file-ignores =
    __init__.py:F401
    tests/*:D

docstring-convention = google

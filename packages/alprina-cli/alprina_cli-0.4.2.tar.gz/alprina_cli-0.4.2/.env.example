# Alprina Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION (Neon)
# ============================================
DATABASE_URL=postgresql://user:password@ep-example-123456.us-east-1.aws.neon.tech/dbname?sslmode=require

# ============================================
# POLAR BILLING CONFIGURATION
# ============================================
# Get from: https://polar.sh/settings/api-tokens
POLAR_ACCESS_TOKEN=polar_oat_your_token_here
POLAR_API_TOKEN=polar_oat_your_token_here  # Alias for POLAR_ACCESS_TOKEN

# Get from: https://polar.sh/dashboard/webhooks
POLAR_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Product IDs (from your Polar dashboard)
POLAR_PRODUCT_FREE=a1a52dd9-42ad-4c60-a87c-3cd99827f69e
POLAR_PRODUCT_DEVELOPER=68443920-6061-434f-880d-83d4efd50fde
POLAR_PRODUCT_PRO=fa25e85e-5295-4dd5-bdd9-5cb5cac15a0b
POLAR_PRODUCT_TEAM=41768ba5-f37d-417d-a10e-fb240b702cb6

# ============================================
# AI / LLM CONFIGURATION
# ============================================
# For security scanning agents
OPENAI_API_KEY=sk-proj-your_openai_key_here

# ============================================
# API CONFIGURATION
# ============================================
# CORS origins (comma-separated for multiple)
CORS_ORIGINS=*
# Production: CORS_ORIGINS=https://www.alprina.com,https://platform.alprina.com

# API Base URL
API_BASE_URL=http://localhost:8000

# ============================================
# AUTHENTICATION (Optional)
# ============================================
# JWT secret for token signing
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# ============================================
# MONITORING & LOGGING (Optional)
# ============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# DEPLOYMENT ENVIRONMENT
# ============================================
ENVIRONMENT=development
# Options: development, staging, production

# ============================================
# USAGE NOTES
# ============================================
# 1. Never commit this file with real values to git
# 2. In production, set these via your hosting platform's env vars
# 3. Render.com: Dashboard > Environment > Environment Variables
# 4. For local dev: cp .env.example .env && edit .env

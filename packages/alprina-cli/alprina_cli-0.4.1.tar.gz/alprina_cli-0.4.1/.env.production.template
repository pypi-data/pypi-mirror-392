# Alprina Backend - Production Environment Variables
# Copy this file to .env.production and fill in your values

# ============================================================
# OpenAI API
# ============================================================
OPENAI_API_KEY=sk-proj-YOUR_KEY_HERE

# ============================================================
# Neon Database
# ============================================================
DATABASE_URL=postgresql://neondb_owner:YOUR_PASSWORD@YOUR_ENDPOINT.neon.tech/neondb?sslmode=require&channel_binding=require

# ============================================================
# Polar Billing
# ============================================================
POLAR_API_TOKEN=polar_oat_YOUR_TOKEN_HERE
POLAR_WEBHOOK_SECRET=whsec_YOUR_SECRET_HERE

# ============================================================
# Production URLs
# ============================================================
API_URL=https://api.alprina.com
WEBSITE_URL=https://alprina.com

# ============================================================
# Security
# ============================================================
CORS_ORIGINS=https://alprina.com,https://www.alprina.com

# ============================================================
# Optional: Redis for Caching (Future)
# ============================================================
# REDIS_URL=redis://localhost:6379

# ============================================================
# Optional: Sentry Error Tracking
# ============================================================
# SENTRY_DSN=https://your-sentry-dsn-here

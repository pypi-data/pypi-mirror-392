# Claude Multi-Agent System Configuration
# Copy this file to .env and customize as needed

# ==============================================================================
# VALIDATION SETTINGS
# ==============================================================================

# Validation mode: strict, normal, permissive
# - strict: All validators must pass, no exceptions
# - normal: Required validators must pass, warnings allowed
# - permissive: Validators provide guidance only
VALIDATION_MODE=normal

# Auto-run validators after each agent execution
AUTO_VALIDATE=true

# Fail fast on first validator failure
FAIL_FAST=false

# ==============================================================================
# GOVERNANCE SETTINGS
# ==============================================================================

# Require pre-run hooks before agent execution
PRE_RUN_REQUIRED=true

# Require post-run validation after agent execution
POST_RUN_REQUIRED=true

# Require overlap request approval for cross-agent modifications
OVERLAP_APPROVAL_REQUIRED=true

# Maximum lines in Write Zone updates (3-8 recommended)
MAX_WRITE_ZONE_LENGTH=8
MIN_WRITE_ZONE_LENGTH=3

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# Enable secret scanning in output
SECRET_SCAN_ENABLED=true

# Block execution if secrets detected
BLOCK_ON_SECRETS=true

# Allowed placeholder patterns (comma-separated regex)
ALLOWED_PLACEHOLDERS="\\$\\{.*\\},YOUR_.*_HERE,process\\.env\\..+"

# ==============================================================================
# QUALITY GATES
# ==============================================================================

# Require scorecard completion
SCORECARD_REQUIRED=true

# Minimum scorecard pass rate (0.0 to 1.0)
MIN_SCORECARD_PASS_RATE=0.90

# Require acceptance checklist
ACCEPTANCE_CHECKLIST_REQUIRED=true

# Minimum acceptance criteria pass rate (0.0 to 1.0)
MIN_ACCEPTANCE_PASS_RATE=1.0

# ==============================================================================
# OUTPUT SETTINGS
# ==============================================================================

# Maximum work.md file size (in KB)
MAX_WORK_FILE_SIZE=500

# Archive work.md after each agent (creates work_archive/)
ARCHIVE_WORK_OUTPUT=false

# Timestamp format for archives (YYYY-MM-DD-HHmmss)
ARCHIVE_TIMESTAMP_FORMAT=YYYY-MM-DD-HHmmss

# ==============================================================================
# LOGGING SETTINGS
# ==============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log to file in addition to console
LOG_TO_FILE=false

# Log file path (relative to .claude/)
LOG_FILE=logs/agent-execution.log

# Maximum log file size (in MB) before rotation
MAX_LOG_SIZE=10

# Keep last N log files
LOG_RETENTION=5

# ==============================================================================
# AGENT SETTINGS
# ==============================================================================

# Default agent timeout (in seconds, 0 = no timeout)
AGENT_TIMEOUT=300

# Allow parallel agent execution
ALLOW_PARALLEL_AGENTS=false

# Maximum parallel agents
MAX_PARALLEL_AGENTS=3

# ==============================================================================
# CONTEXT SETTINGS
# ==============================================================================

# Auto-create new session context file
AUTO_CREATE_CONTEXT=true

# Context file naming pattern
CONTEXT_FILE_PATTERN=context_session_{n}.md

# Maximum context file size before creating new session (in KB)
MAX_CONTEXT_SIZE=100

# ==============================================================================
# SKILLS INTEGRATION
# ==============================================================================

# Enable skills integration
SKILLS_ENABLED=true

# Skills base path
SKILLS_PATH=/mnt/skills/public

# Timeout for skill operations (in seconds)
SKILLS_TIMEOUT=60

# ==============================================================================
# DATABASE SETTINGS (if using centralized tracking)
# ==============================================================================

# Database URL (optional, for advanced usage)
# DATABASE_URL=postgresql://user:pass@localhost:5432/claude_agents

# Enable database tracking
# DB_TRACKING_ENABLED=false

# ==============================================================================
# NOTIFICATION SETTINGS (optional)
# ==============================================================================

# Send notifications on validation failures
# NOTIFY_ON_FAILURE=false

# Notification webhook URL
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Notification email (requires SMTP config)
# NOTIFICATION_EMAIL=team@company.com

# ==============================================================================
# CI/CD INTEGRATION
# ==============================================================================

# Exit with non-zero code on validation failure
EXIT_ON_FAILURE=true

# Generate JSON report of validation results
GENERATE_JSON_REPORT=false

# JSON report path
JSON_REPORT_PATH=.claude/reports/validation-report.json

# ==============================================================================
# PERFORMANCE SETTINGS
# ==============================================================================

# Enable caching for agent definitions
CACHE_AGENT_DEFINITIONS=true

# Cache TTL in seconds
CACHE_TTL=3600

# Maximum cached items
MAX_CACHE_SIZE=100

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Enable debug mode (verbose output)
DEBUG_MODE=false

# Enable dry run mode (validation only, no execution)
DRY_RUN=false

# Enable profiling (performance metrics)
ENABLE_PROFILING=false

# ==============================================================================
# EXPERIMENTAL FEATURES
# ==============================================================================

# Enable AI-powered validation suggestions
# AI_VALIDATION_SUGGESTIONS=false

# Enable auto-fix for common issues
# AUTO_FIX_ENABLED=false

# Enable workflow recommendations
# WORKFLOW_RECOMMENDATIONS=false

# ==============================================================================
# CUSTOM SETTINGS
# ==============================================================================

# Add your custom configuration below
# MY_CUSTOM_SETTING=value

# ==============================================================================
# NOTES
# ==============================================================================
#
# - All boolean values: true/false (case-insensitive)
# - All numeric values: integers or floats
# - All string values: no quotes needed unless value contains spaces
# - Comments start with #
# - Empty values will use defaults from claude.json
#
# For more information, see: .claude/README.md
# ==============================================================================

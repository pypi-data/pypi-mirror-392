{%- for field_name, field_def in entity.fields.items() %}
{%- if field_def.get('unique') %}

    ,CONSTRAINT tb_{{ entity.name | lower }}_{{ field_name }}_key UNIQUE ({{ field_name }})
{%- endif %}
{%- endfor %}
{%- for constraint in entity.constraints %}

    ,{{ constraint }}
{%- endfor %}
);


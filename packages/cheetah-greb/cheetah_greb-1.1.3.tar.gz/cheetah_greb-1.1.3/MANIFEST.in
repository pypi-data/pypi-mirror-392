# Include necessary files
include README.md
include LICENSE
include pyproject.toml

# Include source code
recursive-include src *.py

# EXCLUDE sensitive files (CRITICAL SECURITY)
exclude .env
exclude .env.*
exclude .env.local
exclude .env.example
exclude config/*.json
exclude config/*.yaml
exclude config/*.yml

# Exclude development files
exclude .gitignore
exclude .python-version
exclude uv.lock
exclude .rgignore
exclude main.py

# Exclude documentation (users don't need this)
exclude docs/*
recursive-exclude docs *

# Exclude tests
exclude tests/*
recursive-exclude tests *

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store

from core.simulateur import Simulateur
from core.analyseur import Analyseur
from ios.affichage import AffichageConsole
from ios.export import ExportDonnees

def main():
    """Fonction principale du simulateur."""
    
    # Configuration des arguments en ligne de commande
    parser = argparse.ArgumentParser(description='Simulateur de Trafic Routier Intelligent')
    parser.add_argument('--config', '-c', 
                       default='../data/config_reseau.json',
                       help='Fichier de configuration du rÃ©seau (dÃ©faut: ../data/config_reseau.json)')
    parser.add_argument('--tours', '-t', 
                       type=int, default=60,
                       help='Nombre de tours de simulation (dÃ©faut: 60)')
    parser.add_argument('--delta', '-d', 
                       type=float, default=1.0,
                       help='Pas de temps en minutes (dÃ©faut: 1.0)')
    parser.add_argument('--export-csv', 
                       action='store_true',
                       help='Exporter les rÃ©sultats en CSV')
    parser.add_argument('--export-json', 
                       action='store_true',
                       help='Exporter les rÃ©sultats en JSON')
    parser.add_argument('--graphiques', '-g', 
                       action='store_true',
                       help='GÃ©nÃ©rer des graphiques de visualisation')
    parser.add_argument('--silencieux', '-s', 
                       action='store_true',
                       help='Mode silencieux (pas d\'affichage dÃ©taillÃ©)')
    parser.add_argument('--demo', 
                       action='store_true',
                       help='Lancer une dÃ©monstration rapide')
    
    args = parser.parse_args()
    
    # Mode dÃ©monstration
    if args.demo:
        lancer_demonstration()
        return
    
    try:
        print("ğŸš— SIMULATEUR DE TRAFIC ROUTIER INTELLIGENT")
        print("=" * 50)
        print(f"Configuration: {args.config}")
        print(f"Simulation: {args.tours} tours Ã— {args.delta}min")
        print()
        
        # Initialisation du simulateur
        if not args.silencieux:
            print("ğŸ”§ Initialisation du simulateur...")
        
        simulateur = Simulateur(fichier_config=args.config)
        
        if not args.silencieux:
            afficher_configuration_reseau(simulateur)
        
        # Lancement de la simulation
        simulateur.lancer_simulation(n_tours=args.tours, delta_t=args.delta)
        
        # Analyse des rÃ©sultats
        if not args.silencieux:
            print("\nğŸ” Analyse des rÃ©sultats...")
        
        analyseur = Analyseur(simulateur)
        
        # Affichage du rapport dÃ©taillÃ©
        if not args.silencieux:
            AffichageConsole.afficher_rapport_detaille(analyseur)
        
        # Exports demandÃ©s
        exporteur = ExportDonnees(simulateur)
        
        if args.export_csv:
            nom_csv = f"resultats_{args.tours}tours_{args.delta}min.csv"
            exporteur.exporter_csv(nom_csv)
        
        if args.export_json:
            nom_json = f"resultats_{args.tours}tours_{args.delta}min.json"
            exporteur.exporter_json(nom_json)
        
        if args.graphiques:
            print("ğŸ“Š GÃ©nÃ©ration des graphiques...")
            exporteur.generer_graphiques()
        
        print("\nâœ… Simulation terminÃ©e avec succÃ¨s!")
        
    except KeyboardInterrupt:
        print("\nâš ï¸  Simulation interrompue par l'utilisateur")
        sys.exit(1)
    except FileNotFoundError as e:
        print(f"âŒ Erreur: Fichier non trouvÃ© - {e}")
        print("ğŸ’¡ Astuce: Utilisez --demo pour une dÃ©monstration avec configuration par dÃ©faut")
        sys.exit(1)
    except Exception as e:
        print(f"âŒ Erreur inattendue: {e}")
        sys.exit(1)

def afficher_configuration_reseau(simulateur):
    """Affiche la configuration du rÃ©seau chargÃ©e."""
    reseau = simulateur.reseau
    config = simulateur.configuration
    
    print("ğŸ—ºï¸  CONFIGURATION DU RÃ‰SEAU:")
    print(f"   Routes: {len(reseau.routes)}")
    print(f"   Intersections: {len(reseau.intersections)}")
    print(f"   VÃ©hicules initiaux: {len(reseau.vehicules)}")
    
    print("\nğŸ›£ï¸  ROUTES CONFIGURÃ‰ES:")
    for nom_route, route in reseau.routes.items():
        connexions = len(route.routes_connectees)
        print(f"   {nom_route:20s} | {route.longueur:4.1f}km | "
              f"{route.limite_vitesse:3.0f}km/h | {connexions} connexion(s)")
    
    if reseau.intersections:
        print(f"\nğŸš¦ INTERSECTIONS:")
        for nom_intersection, routes_connectees in reseau.intersections.items():
            routes_str = ", ".join(routes_connectees)
            print(f"   {nom_intersection:15s} -> {routes_str}")
    
    print()

def lancer_demonstration():
    """Lance une dÃ©monstration rapide du simulateur."""
    print("ğŸ¯ MODE DÃ‰MONSTRATION")
    print("=" * 40)
    
    # Configuration simplifiÃ©e pour la dÃ©mo
    print("CrÃ©ation d'un rÃ©seau de dÃ©monstration...")
    
    simulateur = Simulateur()  # Configuration par dÃ©faut
    
    print("Configuration automatique terminÃ©e!")
    afficher_configuration_reseau(simulateur)
    
    # Simulation courte
    print("ğŸš€ Lancement d'une simulation de 30 tours...")
    simulateur.lancer_simulation(n_tours=60, delta_t=1.0)
    
    # Analyse rapide
    analyseur = Analyseur(simulateur)
    AffichageConsole.afficher_rapport_detaille(analyseur)
    
    # Export JSON automatique
    exporteur = ExportDonnees(simulateur)
    exporteur.exporter_json("demo_resultats.json")
    
    print("\nğŸ‰ DÃ©monstration terminÃ©e!")
    print("ğŸ’¡ Pour une simulation personnalisÃ©e, utilisez: python main.py --config votre_config.json")

def verifier_dependances():
    """VÃ©rifie que toutes les dÃ©pendances sont installÃ©es."""
    dependances_manquantes = []
    
    try:
        import matplotlib
    except ImportError:
        dependances_manquantes.append("matplotlib")
    
    try:
        import pandas
    except ImportError:
        dependances_manquantes.append("pandas")
    
    try:
        import numpy
    except ImportError:
        dependances_manquantes.append("numpy")
    
    if dependances_manquantes:
        print("âŒ DÃ©pendances manquantes:")
        for dep in dependances_manquantes:
            print(f"   - {dep}")
        print("\nğŸ’¡ Installez avec: pip install " + " ".join(dependances_manquantes))
        return False
    
    return True

if __name__ == "__main__":
    if not verifier_dependances():
        print("\nâš ï¸  Certaines fonctionnalitÃ©s peuvent Ãªtre limitÃ©es.")
        input("Appuyez sur EntrÃ©e pour continuer quand mÃªme...")

    print("\nğŸ“ˆ DÃ©marrage du profilage de la simulation...\n")

    profiler = cProfile.Profile()
    profiler.enable()

    main()

    profiler.disable()
    print("\nğŸ“Š Profilage terminÃ©. Analyse des rÃ©sultats...\n")

    s = io.StringIO()
    ps = pstats.Stats(profiler, stream=s).sort_stats("cumtime")
    ps.print_stats(30)  # affiche les 30 fonctions les plus coÃ»teuses
    print(s.getvalue())

python main.py --config <path to your config file or leave empty to use the default one> --tours 60 --export-csv --export-json
```


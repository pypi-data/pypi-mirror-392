<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="extra_info" model="ir.ui.view">
        <field name="name">Checkout Extra OCAD License Info</field>
        <field name="type">qweb</field>
        <field name="key">website_sale.extra_info</field>
        <field name="website_id" ref="website.default_website" />
        <field name="arch" type="xml">
            <t
                name="Checkout Extra Info"
                active="False"
                t-name="website_sale.extra_info"
            >
                <t t-call="website_sale.checkout_layout">
                    <t t-set="show_navigation_button" t-value="False" />
                    <t t-set="redirect" t-valuef="/shop/extra_info" />
                    <t t-set="oe_structure">
                        <div
                            class="oe_structure"
                            id="oe_structure_website_sale_extra_info_1"
                        />
                    </t>

                    <h3 class="mb-4">Extra info</h3>

                    <section
                        class="s_website_form"
                        data-vcss="001"
                        data-snippet="s_website_form"
                    >
                        <div class="container">
                            <form
                                action="/website/form/"
                                method="post"
                                enctype="multipart/form-data"
                                class="o_mark_required s_website_form_no_recaptcha"
                                data-mark="*"
                                data-force_action="shop.sale.order"
                                data-model_name="sale.order"
                                data-success-mode="redirect"
                                data-success-page="/shop/payment"
                                hide-change-model="true"
                            >
                                <div class="s_website_form_rows s_col_no_bgcolor row">
                                    <!-- License Name (Required) -->
                                    <div
                                        class="s_website_form_field col-12 py-2 mb-0 s_website_form_required"
                                        data-type="char"
                                        data-name="License name"
                                    >
                                        <div
                                            class="s_col_no_resize s_col_no_bgcolor row"
                                        >
                                            <label
                                                class="s_website_form_label col-form-label col-sm-auto"
                                                style="width: 200px"
                                                for="oeft0m4oaq2b"
                                            >
                                                <span
                                                    class="s_website_form_label_content"
                                                >License name</span>
                                                <span
                                                    class="s_website_form_mark"
                                                >*</span>
                                            </label>
                                            <div class="col-sm">
                                                <input
                                                    id="oeft0m4oaq2b"
                                                    type="text"
                                                    class="s_website_form_input form-control"
                                                    name="client_order_ref"
                                                    required="1"
                                                    minlength="3"
                                                    pattern="[A-z0-9À-ž\s]+"
                                                    placeholder="e.g. company name, club name or personal name"
                                                />
                                                <div
                                                    class="s_website_form_field_description small form-text text-muted"
                                                >
                                                    &#160;Please enter at least 3 Latin characters.<br
                                                />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- License/Subscription Exists (Boolean) -->
                                    <div
                                        class="s_website_form_field col-12 py-2 mb-0"
                                        data-type="boolean"
                                        data-name="License/Subscription exists"
                                    >
                                        <div
                                            class="s_col_no_resize s_col_no_bgcolor row"
                                        >
                                            <label
                                                class="s_website_form_label col-form-label col-sm-auto"
                                                style="width: 200px"
                                                for="oxaaqf2tcdkh"
                                            >
                                                <span
                                                    class="s_website_form_label_content"
                                                >License/Subscription exists</span>
                                            </label>
                                            <div class="col-sm">
                                                <div class="form-check">
                                                    <input
                                                        id="oxaaqf2tcdkh"
                                                        type="checkbox"
                                                        class="s_website_form_input form-check-input"
                                                        name="license_exists"
                                                        value="Yes"
                                                    />
                                                </div>
                                                <div
                                                    class="s_website_form_field_description small form-text text-muted"
                                                >
                                                    &#160;Mark this option if you already have an OCAD license/subscription.<br
                                                />
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Remark (Text) -->
                                    <div
                                        class="s_website_form_field col-12 py-2 mb-0"
                                        data-type="text"
                                        data-name="Remark"
                                    >
                                        <div
                                            class="s_col_no_resize s_col_no_bgcolor row"
                                        >
                                            <label
                                                class="s_website_form_label col-form-label col-sm-auto"
                                                style="width: 200px"
                                                for="o57stxb8wu97"
                                            >
                                                <span
                                                    class="s_website_form_label_content"
                                                >Remark</span>
                                            </label>
                                            <div class="col-sm">
                                                <textarea
                                                    id="o57stxb8wu97"
                                                    class="s_website_form_input form-control"
                                                    name="comment"
                                                    rows="2"
                                                    placeholder="e.g. old license number when updating or renew a license"
                                                />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Submit Buttons -->
                                    <div
                                        class="s_website_form_submit s_website_form_no_submit_option d-flex flex-column flex-lg-row align-items-lg-center pt-4"
                                    >
                                        <a
                                            role="button"
                                            name="website_sale_main_button"
                                            class="s_website_form_send btn btn-primary order-lg-3 w-100 w-lg-auto ms-lg-auto"
                                            href="/shop/confirm_order"
                                        >
                                            Continue checkout
                                            <i
                                            class="fa fa-angle-right ms-2 fw-light"
                                        />
                                        </a>
                                        <div
                                            class="position-relative d-flex d-lg-none w-100 justify-content-center align-items-center my-2 opacity-75"
                                        >
                                            <hr class="w-100" />
                                            <span class="px-3">or</span>
                                            <hr class="w-100" />
                                        </div>
                                        <a href="/shop/checkout" class="text-center">
                                            <i class="fa fa-angle-left me-2 fw-light" />
                                            Return to shipping
                                        </a>
                                        <span id="s_website_form_result" />
                                    </div>
                                </div>
                            </form>
                        </div>
                    </section>
                </t>
            </t>
        </field>
    </record>
</odoo>

{
  "name": "minidb-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "ahooks": "^3.8.0",
    "axios": "^1.7.2",
    "dayjs": "^1.11.12",
    "immer": "^10.1.1",
    "jotai": "^2.9.2",
    "lodash-es": "^4.17.21",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "react-router-dom": "^6.25.1",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "~6.21",
    "@typescript-eslint/parser": "~6.21",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "autoprefixer": "^10.4.19",
    "eslint": "~8.57.0",
    "eslint-config-alloy": "^5.1.2",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "rollup": "npm:@rollup/wasm-node",
    "tailwindcss": "^3.4.7",
    "typescript": "~5.3",
    "vite": "^5.3.5",
    "vitest": "^2.0.5"
  },
  "scripts": {
    "dev": "vite --mode development --port 11888 --host",
    "prod": "vite --mode prod --port 8888 --host",
    "build": "tsc -b && vite build",
    "tsc": "tsc -b",
    "lint": "eslint --fix . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prettier": "prettier . --write --cache",
    "pre-commit": "lint-staged",
    "test": "vitest --ui",
    "coverage": "vitest --ui --coverage.enabled=true --coverage.all=true --mode development",
    "bench": "vitest bench"
  },
  "eslintIgnore": [
    "src/dev/*.ts"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier . --write --cache",
      "vitest related --run --mode development"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}

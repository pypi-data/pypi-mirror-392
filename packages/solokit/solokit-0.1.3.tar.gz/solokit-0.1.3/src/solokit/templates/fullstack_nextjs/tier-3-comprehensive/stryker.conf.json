{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress"],
  "testRunner": "jest",
  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.ts",
    "enableFindRelatedTests": true
  },
  "coverageAnalysis": "perTest",
  "mutate": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "lib/**/*.ts",
    "!**/*.test.ts",
    "!**/*.test.tsx",
    "!**/*.spec.ts",
    "!**/*.spec.tsx"
  ],
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  "ignorePatterns": ["node_modules", ".next", "coverage", "dist", "build"]
}

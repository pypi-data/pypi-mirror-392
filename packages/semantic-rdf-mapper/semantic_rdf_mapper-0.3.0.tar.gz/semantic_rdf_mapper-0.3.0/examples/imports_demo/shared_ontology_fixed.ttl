@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix shared: <http://example.org/shared#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

# Shared Ontology

shared:Person a owl:Class ;
    rdfs:label "Person" ;
    skos:prefLabel "Person" ;
    skos:altLabel "Individual" ;
    rdfs:comment "A human being" .

shared:Organization a owl:Class ;
    rdfs:label "Organization" ;
    skos:prefLabel "Organization" ;
    skos:altLabel "Company" ;
    skos:altLabel "Institution" ;
    rdfs:comment "A structured group of people with a purpose" .

shared:ContactInfo a owl:Class ;
    rdfs:label "Contact Information" ;
    skos:prefLabel "Contact Information" ;
    skos:altLabel "Contact Details" ;
    rdfs:comment "Contact information for a person or organization" .

# Common Properties
shared:hasFirstName a owl:DatatypeProperty ;
    rdfs:domain shared:Person ;
    rdfs:range xsd:string ;
    rdfs:label "has first name" ;
    skos:prefLabel "has first name" ;
    skos:altLabel "first name" ;
    skos:hiddenLabel "fname" ;
    skos:hiddenLabel "first_name" .

shared:hasLastName a owl:DatatypeProperty ;
    rdfs:domain shared:Person ;
    rdfs:range xsd:string ;
    rdfs:label "has last name" ;
    skos:prefLabel "has last name" ;
    skos:altLabel "surname" ;
    skos:altLabel "family name" ;
    skos:hiddenLabel "lname" ;
    skos:hiddenLabel "last_name" .

shared:hasFullName a owl:DatatypeProperty ;
    rdfs:domain shared:Person ;
    rdfs:range xsd:string ;
    rdfs:label "has full name" ;
    skos:prefLabel "has full name" ;
    skos:altLabel "name" ;
    skos:hiddenLabel "full_name" ;
    skos:hiddenLabel "display_name" .

shared:hasEmail a owl:DatatypeProperty ;
    rdfs:domain shared:Person ;
    rdfs:range xsd:string ;
    rdfs:label "has email address" ;
    skos:prefLabel "has email address" ;
    skos:altLabel "email" ;
    skos:hiddenLabel "email_addr" ;
    skos:hiddenLabel "e_mail" .

shared:hasPhoneNumber a owl:DatatypeProperty ;
    rdfs:domain shared:Person ;
    rdfs:range xsd:string ;
    rdfs:label "has phone number" ;
    skos:prefLabel "has phone number" ;
    skos:altLabel "phone" ;
    skos:hiddenLabel "phone_num" ;
    skos:hiddenLabel "tel" .

shared:isActive a owl:DatatypeProperty ;
    rdfs:range xsd:boolean ;
    rdfs:label "is active" ;
    skos:prefLabel "is active" ;
    skos:altLabel "active status" ;
    skos:hiddenLabel "active" ;
    skos:hiddenLabel "is_enabled" ;
    rdfs:comment "Indicates whether the entity is currently active" .

shared:hasAddress a owl:DatatypeProperty ;
    rdfs:range xsd:string ;
    rdfs:label "has address" ;
    skos:prefLabel "has address" ;
    skos:altLabel "address" ;
    skos:hiddenLabel "addr" ;
    skos:hiddenLabel "location" ;
    rdfs:comment "Physical or mailing address" .

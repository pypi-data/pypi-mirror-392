@prefix hr: <http://example.org/hr#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix xml: <http://www.w3.org/XML/1998/namespace> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .

<http://example.org/hr> a owl:Ontology ;
    rdfs:label "Human Resources Ontology" ;
    rdfs:comment "Ontology for employee and organizational data with SKOS labels for matching" .

#################################################################
#    Classes
#################################################################

hr:Employee a owl:Class ;
    rdfs:label "Employee" ;
    skos:prefLabel "Employee" ;
    skos:altLabel "Worker" ;
    skos:altLabel "Staff Member" ;
    rdfs:comment "A person employed by the organization" .

hr:Department a owl:Class ;
    rdfs:label "Department" ;
    skos:prefLabel "Department" ;
    skos:altLabel "Division" ;
    skos:altLabel "Unit" ;
    rdfs:comment "An organizational department" .

hr:Position a owl:Class ;
    rdfs:label "Position" ;
    skos:prefLabel "Position" ;
    skos:altLabel "Role" ;
    skos:altLabel "Job Title" ;
    rdfs:comment "A job position or role" .

#################################################################
#    Data Properties
#################################################################

hr:employeeId a owl:DatatypeProperty ;
    rdfs:label "employee identifier" ;
    skos:prefLabel "Employee ID" ;
    skos:altLabel "EmpID" ;
    skos:altLabel "Staff Number" ;
    skos:hiddenLabel "EMP_ID" ;
    skos:hiddenLabel "emp_no" ;
    skos:hiddenLabel "staff_id" ;
    rdfs:domain hr:Employee ;
    rdfs:range xsd:string ;
    rdfs:comment "Unique identifier for an employee" .

hr:firstName a owl:DatatypeProperty ;
    rdfs:label "first name" ;
    skos:prefLabel "First Name" ;
    skos:altLabel "Given Name" ;
    skos:altLabel "Forename" ;
    skos:hiddenLabel "fname" ;
    skos:hiddenLabel "first_nm" ;
    rdfs:domain hr:Employee ;
    rdfs:range xsd:string ;
    rdfs:comment "Employee's first name" .

hr:lastName a owl:DatatypeProperty ;
    rdfs:label "last name" ;
    skos:prefLabel "Last Name" ;
    skos:altLabel "Surname" ;
    skos:altLabel "Family Name" ;
    skos:hiddenLabel "lname" ;
    skos:hiddenLabel "last_nm" ;
    rdfs:domain hr:Employee ;
    rdfs:range xsd:string ;
    rdfs:comment "Employee's last name" .

hr:emailAddress a owl:DatatypeProperty ;
    rdfs:label "email address" ;
    skos:prefLabel "Email Address" ;
    skos:altLabel "Email" ;
    skos:altLabel "E-mail" ;
    skos:hiddenLabel "email_addr" ;
    skos:hiddenLabel "work_email" ;
    rdfs:domain hr:Employee ;
    rdfs:range xsd:string ;
    rdfs:comment "Employee's work email address" .

hr:phoneNumber a owl:DatatypeProperty ;
    rdfs:label "phone number" ;
    skos:prefLabel "Phone Number" ;
    skos:altLabel "Telephone" ;
    skos:altLabel "Contact Number" ;
    skos:hiddenLabel "phone" ;
    skos:hiddenLabel "tel" ;
    skos:hiddenLabel "phone_no" ;
    rdfs:domain hr:Employee ;
    rdfs:range xsd:string ;
    rdfs:comment "Employee's phone number" .

hr:salary a owl:DatatypeProperty ;
    rdfs:label "annual salary" ;
    skos:prefLabel "Annual Salary" ;
    skos:altLabel "Compensation" ;
    skos:altLabel "Pay" ;
    skos:hiddenLabel "sal" ;
    skos:hiddenLabel "annual_pay" ;
    rdfs:domain hr:Employee ;
    rdfs:range xsd:decimal ;
    rdfs:comment "Employee's annual salary" .

hr:hireDate a owl:DatatypeProperty ;
    rdfs:label "hire date" ;
    skos:prefLabel "Hire Date" ;
    skos:altLabel "Start Date" ;
    skos:altLabel "Employment Date" ;
    skos:hiddenLabel "hire_dt" ;
    skos:hiddenLabel "start_dt" ;
    rdfs:domain hr:Employee ;
    rdfs:range xsd:date ;
    rdfs:comment "Date when employee was hired" .

hr:isActive a owl:DatatypeProperty ;
    rdfs:label "is active" ;
    skos:prefLabel "Active Status" ;
    skos:altLabel "Employment Status" ;
    skos:hiddenLabel "active" ;
    skos:hiddenLabel "is_employed" ;
    rdfs:domain hr:Employee ;
    rdfs:range xsd:boolean ;
    rdfs:comment "Whether the employee is currently active" .

hr:departmentName a owl:DatatypeProperty ;
    rdfs:label "department name" ;
    skos:prefLabel "Department Name" ;
    skos:altLabel "Division Name" ;
    skos:hiddenLabel "dept_name" ;
    skos:hiddenLabel "dept" ;
    rdfs:domain hr:Department ;
    rdfs:range xsd:string ;
    rdfs:comment "Name of the department" .

hr:departmentCode a owl:DatatypeProperty ;
    rdfs:label "department code" ;
    skos:prefLabel "Department Code" ;
    skos:altLabel "Dept Code" ;
    skos:hiddenLabel "dept_cd" ;
    skos:hiddenLabel "dept_id" ;
    rdfs:domain hr:Department ;
    rdfs:range xsd:string ;
    rdfs:comment "Short code for the department" .

hr:positionTitle a owl:DatatypeProperty ;
    rdfs:label "position title" ;
    skos:prefLabel "Position Title" ;
    skos:altLabel "Job Title" ;
    skos:altLabel "Role Name" ;
    skos:hiddenLabel "title" ;
    skos:hiddenLabel "job_title" ;
    rdfs:domain hr:Position ;
    rdfs:range xsd:string ;
    rdfs:comment "Title of the position" .

#################################################################
#    Object Properties
#################################################################

hr:worksInDepartment a owl:ObjectProperty ;
    rdfs:label "works in department" ;
    skos:prefLabel "Works In Department" ;
    skos:altLabel "Assigned To Department" ;
    skos:hiddenLabel "dept" ;
    rdfs:domain hr:Employee ;
    rdfs:range hr:Department ;
    rdfs:comment "Links employee to their department" .

hr:holdsPosition a owl:ObjectProperty ;
    rdfs:label "holds position" ;
    skos:prefLabel "Holds Position" ;
    skos:altLabel "Has Role" ;
    skos:altLabel "Job Position" ;
    skos:hiddenLabel "position" ;
    rdfs:domain hr:Employee ;
    rdfs:range hr:Position ;
    rdfs:comment "Links employee to their position" .

hr:reportsTo a owl:ObjectProperty ;
    rdfs:label "reports to" ;
    skos:prefLabel "Reports To" ;
    skos:altLabel "Manager" ;
    skos:altLabel "Supervisor" ;
    skos:hiddenLabel "mgr" ;
    skos:hiddenLabel "manager_id" ;
    rdfs:domain hr:Employee ;
    rdfs:range hr:Employee ;
    rdfs:comment "Links employee to their manager" .

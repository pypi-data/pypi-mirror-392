class LightUser(BaseAPIUser, BaseTaskMethods):
    """Light user with occasional API usage patterns"""

    weight = 3
    wait_time = between(3, 8)  # Longer wait times

    def on_start(self):
        super().on_start()
        self.user_type = "light"



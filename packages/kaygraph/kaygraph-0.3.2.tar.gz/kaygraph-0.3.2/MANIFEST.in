# MANIFEST.in - Controls what files are included in the PyPI package

# Include essential files
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml

# Include the core package
recursive-include kaygraph *.py

# Exclude unnecessary files and directories
global-exclude __pycache__
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.swp
global-exclude .DS_Store
global-exclude *.egg-info

# IMPORTANT: Exclude all workbooks and examples from PyPI package
# These are development/demo files not needed for the library
prune workbooks
prune examples
prune claude_integration
prune docs
prune scripts
prune tests
prune utils
prune .github
prune .cursor

# Exclude development files
exclude .gitignore
exclude .python-version
exclude setup.py
exclude CLAUDE.md
exclude DECLARATIVE_WORKFLOWS_READY.md
exclude *.sh
exclude *.bat
exclude .env*
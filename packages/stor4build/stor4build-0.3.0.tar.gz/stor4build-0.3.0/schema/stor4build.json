{
  "info": {
    "description": "The stor4build API for TES calculations",
    "title": "stor4build",
    "version": "0.3.0"
  },
  "paths": {},
  "openapi": "3.0.2",
  "components": {
    "schemas": {
      "BuildingData": {
        "type": "object",
        "properties": {
          "climate": {
            "type": "string",
            "enum": [
              "1A",
              "2A",
              "2B",
              "3A",
              "3B",
              "3C",
              "4A",
              "4B",
              "4C",
              "5A",
              "5B",
              "6A",
              "6B",
              "7A",
              "7B",
              "8A"
            ]
          },
          "vintage": {
            "type": "integer"
          },
          "type": {
            "type": "string",
            "enum": [
              "LargeOffice",
              "SmallOffice",
              "RetailStandalone"
            ]
          }
        },
        "required": [
          "climate",
          "type",
          "vintage"
        ]
      },
      "HourMinute": {
        "type": "object",
        "properties": {
          "hour": {
            "type": "integer",
            "minimum": 0,
            "maximum": 23
          }
        },
        "required": [
          "hour"
        ]
      },
      "Interval": {
        "type": "object",
        "properties": {
          "begin": {
            "$ref": "#/components/schemas/HourMinute"
          },
          "end": {
            "$ref": "#/components/schemas/HourMinute"
          }
        },
        "required": [
          "begin",
          "end"
        ]
      },
      "StorageData": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "ThermalTank-Ice",
              "ThermalTank-ChilledWater",
              "PackagedIceStorage"
            ]
          },
          "capacity": {
            "type": "number"
          },
          "charge_interval": {
            "$ref": "#/components/schemas/Interval"
          },
          "discharge_interval": {
            "$ref": "#/components/schemas/Interval"
          },
          "size_fraction": {
            "type": "number",
            "enum": [
              1.0,
              0.9,
              0.8,
              0.7,
              0.6,
              0.5
            ]
          }
        },
        "required": [
          "type"
        ]
      },
      "UtilityRate": {
        "type": "object",
        "properties": {
          "rate": {
            "type": "number"
          },
          "unit": {
            "type": "string"
          },
          "period": {
            "type": "integer"
          }
        },
        "required": [
          "period",
          "rate",
          "unit"
        ]
      },
      "MonthSchedule": {
        "type": "object",
        "properties": {
          "unit": {
            "type": "string"
          },
          "month": {
            "type": "string"
          },
          "periods": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        },
        "required": [
          "month",
          "periods",
          "unit"
        ]
      },
      "Schedule": {
        "type": "object",
        "properties": {
          "months": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MonthSchedule"
            }
          }
        }
      },
      "UtilityData": {
        "type": "object",
        "properties": {
          "costs": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/UtilityRate"
            }
          },
          "schedule": {
            "$ref": "#/components/schemas/Schedule"
          }
        },
        "required": [
          "schedule"
        ]
      },
      "InputData": {
        "type": "object",
        "properties": {
          "baseline": {
            "$ref": "#/components/schemas/BuildingData"
          },
          "storage": {
            "$ref": "#/components/schemas/StorageData"
          },
          "energy": {
            "$ref": "#/components/schemas/UtilityData"
          },
          "demand": {
            "$ref": "#/components/schemas/UtilityData"
          }
        },
        "required": [
          "baseline",
          "storage"
        ]
      }
    }
  }
}

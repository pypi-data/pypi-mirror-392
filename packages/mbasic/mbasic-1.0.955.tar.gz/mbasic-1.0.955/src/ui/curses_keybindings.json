{
  "editor": {
    "help": {
      "keys": ["Ctrl+H"],
      "primary": "Ctrl+H",
      "description": "Open help browser"
    },
    "step_line": {
      "keys": ["Ctrl+K"],
      "primary": "Ctrl+K",
      "description": "Step Line (execute all statements on current line)"
    },
    "open": {
      "keys": ["Ctrl+O"],
      "primary": "Ctrl+O",
      "description": "Open/Load BASIC file"
    },
    "new": {
      "keys": ["Ctrl+N"],
      "primary": "Ctrl+N",
      "description": "New program"
    },
    "run": {
      "keys": ["Ctrl+R"],
      "primary": "Ctrl+R",
      "description": "Run program"
    },
    "save": {
      "keys": ["Ctrl+V"],
      "primary": "Ctrl+V",
      "description": "Save program (Ctrl+S unavailable - terminal flow control)"
    },
    "goto_line": {
      "keys": ["Ctrl+G"],
      "primary": "Ctrl+G",
      "description": "Go to line"
    },
    "toggle_breakpoint": {
      "keys": ["Ctrl+B"],
      "primary": "Ctrl+B",
      "description": "Toggle breakpoint"
    },
    "step": {
      "keys": ["Ctrl+T"],
      "primary": "Ctrl+T",
      "description": "Step statement (execute one statement)"
    },
    "continue": {
      "keys": ["Ctrl+C"],
      "primary": "Ctrl+C",
      "description": "Continue execution"
    },
    "stop": {
      "keys": ["Ctrl+X"],
      "primary": "Ctrl+X",
      "description": "Stop program execution"
    },
    "quit": {
      "keys": ["Ctrl+Q"],
      "primary": "Ctrl+Q",
      "description": "Quit"
    },
    "toggle_variables": {
      "keys": ["Ctrl+W"],
      "primary": "Ctrl+W",
      "description": "Toggle variables window"
    },
    "renumber": {
      "keys": ["Ctrl+E"],
      "primary": "Ctrl+E",
      "description": "Renumber all lines (RENUM)"
    },
    "settings": {
      "keys": ["Ctrl+P"],
      "primary": "Ctrl+P",
      "description": "Settings"
    }
  },
  "help_browser": {
    "search": {
      "keys": ["/"],
      "primary": "/",
      "description": "Search help"
    },
    "back": {
      "keys": ["U"],
      "primary": "U",
      "description": "Navigate back"
    },
    "quit": {
      "keys": ["ESC", "Q"],
      "primary": "ESC",
      "description": "Close help browser"
    },
    "next_link": {
      "keys": ["Tab"],
      "primary": "Tab",
      "description": "Next link"
    },
    "follow_link": {
      "keys": ["Enter"],
      "primary": "Enter",
      "description": "Follow link"
    },
    "scroll_up": {
      "keys": ["↑", "k"],
      "primary": "↑",
      "description": "Scroll up"
    },
    "scroll_down": {
      "keys": ["↓", "j"],
      "primary": "↓",
      "description": "Scroll down"
    }
  }
}

# Include documentation
include README.md
include README_KR.md
include LICENSE
include CHANGELOG.md

# Include configuration files
include pyproject.toml
include setup.py

# Include plugin examples
include plugin_config.example.yaml

# Include dashboard assets
recursive-include flamehaven_doc_sanity/dashboard/templates *.html
recursive-include flamehaven_doc_sanity/dashboard/static *.css *.js

# Include config files
recursive-include flamehaven_doc_sanity/config *.yaml

# Exclude tests and development files
recursive-exclude tests *
recursive-exclude .github *
exclude .gitignore
exclude .pre-commit-config.yaml
exclude .markdownlint.json

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
